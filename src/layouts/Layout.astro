---
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Frog8 - Powering India Next: Seamless Journeys, Smarter Access",
  description = "Where fintech meets infrastructure. Frog8 builds connected platforms and intelligent kiosks that transform accessâ€”across transit, banking, and public services. Unattended automation for the next 100 million."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="keywords" content="fintech, infrastructure, automation, kiosks, transit, banking, UPI, WhatsApp onboarding, NCMC, India, unattended journeys, secure onboarding, seamless access, embedded payments" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --primary: #a7d221;
    --primary-light: #b8e32e;
    --primary-dark: #8fb31c;
    --background: #0a0a0a;
    --background-light: #121212;
    --background-card: #1a1a1a;
    --text: #f5f5f5;
    --text-muted: #a0a0a0;
    --border: rgba(255, 255, 255, 0.1);
    --shadow: rgba(167, 210, 33, 0.15);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
    overflow-x: hidden;
    width: 100%;
    max-width: 100vw;
  }

  @media (max-width: 768px) {
    html {
      overflow-x: hidden;
      width: 100%;
      max-width: 100vw;
    }
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: linear-gradient(135deg, 
      #0a0a0a 0%, 
      #0f0f0f 25%, 
      #121212 50%, 
      #0f0f0f 75%, 
      #0a0a0a 100%
    );
    background-attachment: fixed;
    color: var(--text);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  @media (max-width: 768px) {
    body {
      overflow-x: hidden;
      width: 100%;
      max-width: 100vw;
    }
  }

  /* Account for vertical navigation sidebar (floating panel) and sticky logo */
  #main-content {
    margin-left: 0;
    padding-left: calc(280px + 3rem);
    padding-top: 0;
    transition: padding-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 1024px) {
    #main-content {
      padding-left: calc(260px + 2rem);
    }
  }

  @media (max-width: 768px) {
    #main-content {
      padding-left: 0 !important;
      padding-right: 0 !important;
      padding-top: 80px; /* Account for mobile nav bar */
      overflow-x: hidden; /* Prevent horizontal scroll */
      width: 100%;
      max-width: 100vw;
      margin-left: 0;
      margin-right: 0;
    }

    /* Ensure hero sections break out of container on mobile */
    #main-content > section.hero-section-fullpage,
    #main-content > section:first-child {
      position: relative;
      left: 0 !important;
      right: 0 !important;
      width: 100vw !important;
      max-width: 100vw !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
      transform: none !important;
    }

    /* Ensure all content inside hero sections is centered */
    #main-content > section.hero-section-fullpage > *,
    #main-content > section:first-child > * {
      left: 0 !important;
      right: 0 !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
      transform: none !important;
    }
  }

  /* Glassmorphism utilities */
  .glass {
    background: linear-gradient(135deg, 
      rgba(26, 26, 26, 0.9) 0%, 
      rgba(30, 30, 30, 0.85) 100%
    );
    backdrop-filter: blur(20px);
    border: 1px solid rgba(167, 210, 33, 0.2);
    border-radius: 24px;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(167, 210, 33, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .glass-dark {
    background: linear-gradient(135deg, 
      rgba(18, 18, 18, 0.95) 0%, 
      rgba(22, 22, 22, 0.92) 100%
    );
    backdrop-filter: blur(20px);
    border: 1px solid rgba(167, 210, 33, 0.25);
    border-radius: 24px;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.5),
      0 4px 16px rgba(167, 210, 33, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  /* Enhanced card styles */
  .card-premium {
    background: linear-gradient(135deg, 
      rgba(26, 26, 26, 0.95) 0%, 
      rgba(30, 30, 30, 0.92) 50%,
      rgba(22, 35, 18, 0.85) 100%
    );
    backdrop-filter: blur(25px);
    border: 1px solid rgba(167, 210, 33, 0.25);
    border-radius: 20px;
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.6),
      0 6px 20px rgba(167, 210, 33, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-premium:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 20px 60px rgba(167, 210, 33, 0.25),
      0 10px 30px rgba(0, 0, 0, 0.8),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
    border-color: rgba(167, 210, 33, 0.4);
  }

  /* Color utilities */
  .text-primary { color: var(--primary); }
  .text-primary-light { color: var(--primary-light); }
  .text-green { color: var(--primary); }
  .bg-primary { background: var(--primary); }
  .bg-primary-light { background: var(--primary-light); }
  .bg-gray-50 { 
    background: linear-gradient(135deg, 
      rgba(18, 25, 18, 0.5) 0%, 
      rgba(15, 15, 15, 0.6) 50%, 
      rgba(18, 25, 18, 0.5) 100%
    ); 
  }
  .border-primary { border-color: var(--primary); }

  /* Enhanced Animations */
  .fade-in {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-in-delay {
    opacity: 1;
    transform: translateY(0);
  }

  .slide-up {
    opacity: 1;
    transform: translateY(0);
  }

  .scale-in {
    opacity: 1;
    transform: scale(1);
  }

  @keyframes fadeIn {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  @keyframes slideUp {
    from { 
      opacity: 0; 
      transform: translateY(40px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  @keyframes scaleIn {
    from { 
      opacity: 0; 
      transform: scale(0.95); 
    }
    to { 
      opacity: 1; 
      transform: scale(1); 
    }
  }

  @keyframes slideIn {
    from { 
      opacity: 0; 
      transform: translateX(-40px); 
    }
    to { 
      opacity: 1; 
      transform: translateX(0); 
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  @keyframes glow {
    0%, 100% { box-shadow: 0 0 20px rgba(167, 210, 33, 0.3); }
    50% { box-shadow: 0 0 40px rgba(167, 210, 33, 0.6); }
  }

  @keyframes rotateIn {
    from { 
      opacity: 0; 
      transform: rotate(-10deg) scale(0.9); 
    }
    to { 
      opacity: 1; 
      transform: rotate(0deg) scale(1); 
    }
  }

  @keyframes bounceIn {
    0% { 
      opacity: 0; 
      transform: scale(0.3); 
    }
    50% { 
      opacity: 1; 
      transform: scale(1.05); 
    }
    70% { 
      transform: scale(0.9); 
    }
    100% { 
      opacity: 1; 
      transform: scale(1); 
    }
  }

  .slide-in {
    opacity: 1;
    transform: translateX(0);
  }

  .float {
    animation: float 3s ease-in-out infinite;
  }

  .pulse {
    animation: pulse 2s ease-in-out infinite;
  }

  .shimmer {
    background: linear-gradient(90deg, transparent, rgba(167, 210, 33, 0.4), transparent);
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
  }

  .glow {
    position: relative;
    display: inline-block;
  }

  .glow::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    border-radius: inherit;
    filter: blur(20px);
    opacity: 0.7;
    z-index: -1;
    animation: subtleGlow 3s ease-in-out infinite alternate;
  }

  @keyframes subtleGlow {
    0% { opacity: 0.3; transform: scale(0.95); }
    100% { opacity: 0.7; transform: scale(1.05); }
  }

  .rotate-in {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .bounce-in {
    opacity: 1;
    transform: scale(1);
  }

  /* Hero Section Standards */
  .hero-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    padding-top: 8rem;
    padding-bottom: 4rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 60vh;
      padding-top: 6rem;
      padding-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      min-height: 50vh;
      padding-top: 5rem;
      padding-bottom: 2rem;
    }
  }

  /* Enhanced Hover effects */
  .hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .hover-lift:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(167, 210, 33, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .hover-lift::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(167, 210, 33, 0.1), transparent);
    transition: left 0.5s;
    z-index: 1;
  }

  .hover-lift:hover::before {
    left: 100%;
  }

  .hover-scale {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-scale:hover {
    transform: scale(1.05);
  }

  .hover-glow {
    transition: all 0.3s ease;
    position: relative;
  }

  .hover-glow:hover {
    box-shadow: 0 0 30px rgba(167, 210, 33, 0.4);
    transform: scale(1.05);
  }

  .hover-bounce {
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .hover-bounce:hover {
    transform: scale(1.1) rotate(2deg);
  }

  .hover-slide {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .hover-slide::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: -100%;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #a7d221, #bdfc52);
    transition: left 0.3s ease;
  }

  .hover-slide:hover::after {
    left: 0;
  }

  /* Gradient backgrounds */
  .gradient-bg {
    background: linear-gradient(135deg, 
      var(--background) 0%, 
      var(--background-light) 50%,
      var(--background) 100%
    );
  }

  .gradient-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  }

  /* Container utilities */
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
    width: 100%;
    box-sizing: border-box;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
      width: 100%;
      max-width: 100%;
      margin-left: 0;
      margin-right: 0;
    }
  }

  /* Enhanced Button styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 28px;
    border-radius: 16px;
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    border: none;
    cursor: pointer;
    font-size: 16px;
    position: relative;
    overflow: hidden;
  }

  .btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(255, 255, 255, 0.1), transparent);
    opacity: 0;
    transition: var(--transition);
  }

  .btn:hover::after {
    opacity: 1;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
    color: #0a0a0a;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(167, 210, 33, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(167, 210, 33, 0.5);
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
  }

  .btn-primary:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(167, 210, 33, 0.3);
  }

  .btn-secondary {
    background: rgba(167, 210, 33, 0.1);
    color: var(--primary);
    border: 2px solid rgba(167, 210, 33, 0.4);
    font-weight: 600;
  }

  .btn-secondary:hover {
    border-color: var(--primary);
    color: var(--primary-light);
    background: rgba(167, 210, 33, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(167, 210, 33, 0.25);
  }

  .btn-secondary:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(167, 210, 33, 0.15);
  }

  /* Focus states for accessibility */
  .btn:focus-visible {
    outline: 3px solid rgba(167, 210, 33, 0.5);
    outline-offset: 2px;
  }

  /* Section spacing */
  .section {
    padding: 120px 0;
  }

  .section-sm {
    padding: 80px 0;
  }

  /* Enhanced Typography */
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }

  h1 { 
    font-size: clamp(2.5rem, 5vw, 4.5rem); 
    font-weight: 700;
    color: var(--text);
  }

  h2 { 
    font-size: clamp(2rem, 4vw, 3.5rem); 
    font-weight: 600;
  }

  h3 { 
    font-size: clamp(1.5rem, 3vw, 2.5rem); 
    font-weight: 600;
  }

  h4 { 
    font-size: 1.75rem; 
    font-weight: 600;
  }

  h5 { 
    font-size: 1.5rem; 
    font-weight: 600;
  }

  h6 { 
    font-size: 1.25rem; 
    font-weight: 600;
  }

  p { 
    margin-bottom: 24px; 
    color: var(--text-muted);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  /* Enhanced Section dividers */
  .section-divider {
    height: 2px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      var(--primary) 50%, 
      transparent 100%
    );
    margin: 80px auto;
    opacity: 0.3;
    max-width: 1280px;
  }

  @media (max-width: 768px) {
    .section-divider {
      margin: 60px auto;
      height: 1.5px;
    }
  }

  @media (max-width: 480px) {
    .section-divider {
      margin: 40px auto;
      height: 1px;
      opacity: 0.25;
    }
  }

  /* Enhanced Grid utilities */
  .grid {
    display: grid;
    gap: 24px;
  }

  .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  .grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }

  .gap-4 { gap: 1rem; }
  .gap-6 { gap: 1.5rem; }
  .gap-8 { gap: 2rem; }
  .gap-12 { gap: 3rem; }

  /* Enhanced Flex utilities */
  .flex {
    display: flex;
  }

  .flex-col {
    flex-direction: column;
  }

  .items-center {
    align-items: center;
  }

  .justify-center {
    justify-content: center;
  }

  .justify-between {
    justify-content: space-between;
  }

  /* Enhanced Text utilities */
  .text-center {
    text-align: center;
  }

  .text-xl {
    font-size: 1.25rem;
    line-height: 1.7;
  }

  .text-2xl {
    font-size: 1.5rem;
    line-height: 1.7;
  }

  /* Enhanced Spacing utilities */
  .mb-4 { margin-bottom: 1rem; }
  .mb-6 { margin-bottom: 1.5rem; }
  .mb-8 { margin-bottom: 2rem; }
  .mb-12 { margin-bottom: 3rem; }
  .mb-16 { margin-bottom: 4rem; }
  .mb-20 { margin-bottom: 5rem; }

  .mt-8 { margin-top: 2rem; }
  .mt-12 { margin-top: 3rem; }
  .mt-16 { margin-top: 4rem; }

  .p-4 { padding: 1rem; }
  .p-6 { padding: 1.5rem; }
  .p-8 { padding: 2rem; }

  .pt-32 { padding-top: 8rem; }

  /* Enhanced Width utilities */
  .w-full { width: 100%; }
  .w-16 { width: 4rem; }
  .h-16 { height: 4rem; }
  .w-8 { width: 2rem; }
  .h-8 { height: 2rem; }

  /* Enhanced Max width utilities */
  .max-w-3xl { max-width: 48rem; }
  .max-w-4xl { max-width: 56rem; }
  .max-w-6xl { max-width: 72rem; }

  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }

  /* Enhanced Responsive design */
  @media (min-width: 640px) {
    .sm\:flex-row {
      flex-direction: row;
    }
    
    .sm\:text-left {
      text-align: left;
    }
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 32px;
    }
    
    .md\:grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    
    .md\:grid-cols-3 {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    
    .md\:grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
    
    .md\:flex {
      display: flex;
    }
    
    .md\:hidden {
      display: none;
    }
    
    .md\:text-left {
      text-align: left;
    }
  }

  @media (min-width: 1024px) {
    .lg\:grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    
    .lg\:grid-cols-3 {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    
    .lg\:grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
    
    .lg\:grid-cols-5 {
      grid-template-columns: repeat(5, minmax(0, 1fr));
    }
  }

  /* Mobile-first responsive design */
  @media (max-width: 480px) {
    .container {
      padding: 0 12px;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-sm {
      padding: 40px 0;
    }
    
    .btn {
      padding: 10px 20px;
      font-size: 14px;
      width: 100%;
      text-align: center;
    }
    
    h1 { 
      font-size: 2rem;
      line-height: 1.1;
      margin-bottom: 16px;
    }
    
    h2 { 
      font-size: 1.75rem;
      line-height: 1.2;
      margin-bottom: 16px;
    }
    
    h3 { 
      font-size: 1.5rem;
      line-height: 1.2;
      margin-bottom: 12px;
    }
    
    p { 
      font-size: 1rem;
      margin-bottom: 16px;
    }
    
    .text-xl {
      font-size: 1.1rem;
    }
    
    .text-2xl {
      font-size: 1.25rem;
    }
    
    .gap-8 { gap: 1rem; }
    .gap-12 { gap: 1.5rem; }
    
    .mb-16 { margin-bottom: 2rem; }
    .mb-12 { margin-bottom: 1.5rem; }
    .mb-8 { margin-bottom: 1rem; }
    
    .p-8 { padding: 1.5rem; }
    .p-6 { padding: 1rem; }
    
    .glass {
      border-radius: 16px;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
    }
    
    .section {
      padding: 80px 0;
    }
    
    .btn {
      padding: 12px 24px;
      font-size: 14px;
    }
    
    .hidden {
      display: none;
    }
    
    .flex-col-mobile {
      flex-direction: column;
    }
    
    .text-center-mobile {
      text-align: center;
    }
    
    .w-full-mobile {
      width: 100%;
    }
    
    .gap-4-mobile { gap: 1rem; }
    .gap-6-mobile { gap: 1.5rem; }
  }

  /* Enhanced spacing utilities */
  .space-y-2 > * + * { margin-top: 0.5rem; }
  .space-y-3 > * + * { margin-top: 0.75rem; }
  .space-y-4 > * + * { margin-top: 1rem; }
  .space-y-6 > * + * { margin-top: 1.5rem; }
