---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Frog8 - Veriphy | WhatsApp-First Onboarding Platform">
  <Navigation />

  <!-- Hero Section -->
  <section class="section gradient-bg pt-32">
    <div class="container text-center">
      <h1 class="fade-in mb-8">
        No portals. No apps. No chaos.<br />
        Just <span class="text-green">Veriphy</span>.
      </h1>
      <p class="fade-in-delay text-xl mb-8 max-w-4xl mx-auto">
        Messaging-native, secure, compliant onboarding for any business, via
        WhatsApp, Signal, iMessage, or email.
      </p>
      <div class="fade-in-delay flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-primary">Get Started</a>
        <a href="/contact" class="btn btn-secondary">Request Demo</a>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- How Veriphy Works -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-16">
        How <span class="text-green">Veriphy</span> Works
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="glass p-6 hover-lift">
          <div class="icon-box">
            <svg class="icon-svg" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
              ></path>
            </svg>
          </div>
          <h4 class="text-green mb-4 text-center">Customer Experience</h4>
          <p class="text-center">
            Simple messaging interface - no apps to download, no portals to
            navigate
          </p>
        </div>
        <div class="glass p-6 hover-lift">
          <div class="icon-box">
            <svg class="icon-svg" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
              ></path>
            </svg>
          </div>
          <h4 class="text-green mb-4 text-center">Frontline Team App</h4>
          <p class="text-center">
            Field agents manage onboarding with mobile-first tools and real-time
            updates
          </p>
        </div>
        <div class="glass p-6 hover-lift">
          <div class="icon-box">
            <svg class="icon-svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
              <path
                fill-rule="evenodd"
                d="M4 5a2 2 0 012-2h8a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 1a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <h4 class="text-green mb-4 text-center">Manager Console</h4>
          <p class="text-center">
            Back office oversight with analytics, compliance tracking, and
            approval workflows
          </p>
        </div>
        <div class="glass p-6 hover-lift">
          <div class="icon-box">
            <svg class="icon-svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h4 class="text-green mb-4 text-center">AI-Driven Performance</h4>
          <p class="text-center">
            Intelligent insights, automation, and optimization across all
            touchpoints
          </p>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Use Cases Table -->
  <section class="section bg-black/20">
    <div class="container">
      <h2 class="text-center mb-16">Use Cases</h2>
      <div class="overflow-x-auto">
        <div class="modern-table-glass p-3 rounded-xl shadow-lg">
          <table class="modern-table w-full min-w-[700px] text-base">
            <thead>
              <tr>
                <th>Industry</th>
                <th>Use Case</th>
                <th>Key Benefits</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Lending</td>
                <td>Loan application and KYC</td>
                <td>Faster approvals, reduced drop-offs</td>
              </tr>
              <tr>
                <td>Insurance</td>
                <td>Policy onboarding and claims</td>
                <td>Digital-first customer experience</td>
              </tr>
              <tr>
                <td>Banking</td>
                <td>Account opening and verification</td>
                <td>Regulatory compliance, secure process</td>
              </tr>
              <tr>
                <td>Cards</td>
                <td>Credit card applications</td>
                <td>Instant verification, quick issuance</td>
              </tr>
              <tr>
                <td>Recruitment</td>
                <td>Employee onboarding</td>
                <td>Streamlined HR processes</td>
              </tr>
              <tr>
                <td>Housing/Access</td>
                <td>Tenant verification</td>
                <td>Document management, background checks</td>
              </tr>
              <tr>
                <td>Government</td>
                <td>Citizen services</td>
                <td>Digital governance, transparency</td>
              </tr>
              <tr>
                <td>Vendor Onboarding</td>
                <td>Supplier verification</td>
                <td>Compliance tracking, audit trails</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Differentiators -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-16">
        What Makes Veriphy <span class="text-green">Different</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">Messaging-Native</h4>
          <p>
            Works on platforms your customers already use - WhatsApp, Signal,
            iMessage, email. No app downloads required.
          </p>
        </div>
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">Secure by Default</h4>
          <p>
            End-to-end encryption, PII protection, and compliance-ready
            architecture built for regulated industries.
          </p>
        </div>
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">Seamless Integration</h4>
          <p>
            APIs and SDKs for CRM, HRMS, eSign, and banking systems. Deploy in
            days, not months.
          </p>
        </div>
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">Role-Aware</h4>
          <p>
            Different interfaces for customers, field agents, managers, and
            admins - each optimized for their workflow.
          </p>
        </div>
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">AI-Driven</h4>
          <p>
            Intelligent document extraction, fraud detection, and process
            optimization powered by machine learning.
          </p>
        </div>
        <div class="glass p-8 hover-lift">
          <h4 class="text-green mb-4">Designed in India</h4>
          <p>
            Built for Indian compliance requirements, languages, and business
            processes from the ground up.
          </p>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Product Tiers (Choose Your Plan) -->
  <section class="section bg-black/20">
    <div class="container">
      <h2 class="text-center mb-16">
        Choose Your <span class="text-green">Plan</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- LITE -->
        <div
          class="glass p-8 hover-lift flex flex-col h-full min-h-[440px] lg:min-h-[480px]"
        >
          <h3 class="text-green mb-4">Lite</h3>
          <p class="mb-6">Perfect for small teams getting started</p>
          <ul class="space-y-3 flex-1">
            <li class="font-semibold">WhatsApp integration</li>
            <li class="font-semibold">Basic document capture</li>
            <li class="font-semibold">5 users included</li>
            <li class="font-semibold">Email support included</li>
          </ul>
          <a href="/contact" class="btn btn-primary w-full mt-8">Choose Lite</a>
        </div>
        <!-- PRO -->
        <div
          class="glass p-8 hover-lift border-2 border-green flex flex-col h-full min-h-[440px] lg:min-h-[480px]"
        >
          <h3 class="text-green mb-4">Pro</h3>
          <p class="mb-6">Advanced features for growing businesses</p>
          <ul class="space-y-3 flex-1">
            <li class="font-semibold">Multi-platform messaging</li>
            <li class="font-semibold">AI document extraction</li>
            <li class="font-semibold">25 users included</li>
            <li class="font-semibold">Analytics dashboard</li>
          </ul>
          <a href="/contact" class="btn btn-primary w-full mt-8">Choose Pro</a>
        </div>
        <!-- MAX -->
        <div
          class="glass p-8 hover-lift flex flex-col h-full min-h-[440px] lg:min-h-[480px]"
        >
          <h3 class="text-green mb-4">Max</h3>
          <p class="mb-6">Enterprise-grade security and compliance</p>
          <ul class="space-y-3 flex-1">
            <li class="font-semibold">Advanced security</li>
            <li class="font-semibold">Compliance features</li>
            <li class="font-semibold">100 users included</li>
            <li class="font-semibold">Custom integrations</li>
          </ul>
          <a href="/contact" class="btn btn-primary w-full mt-8">Choose Max</a>
        </div>
        <!-- ENTERPRISE -->
        <div
          class="glass p-8 hover-lift flex flex-col h-full min-h-[440px] lg:min-h-[480px]"
        >
          <h3 class="text-green mb-4">Enterprise</h3>
          <p class="mb-6">Custom solutions for large organizations</p>
          <ul class="space-y-3 flex-1">
            <li class="font-semibold">Unlimited users</li>
            <li class="font-semibold">White-label solution</li>
            <li class="font-semibold">Dedicated support</li>
            <li class="font-semibold">Custom development</li>
          </ul>
          <a href="/contact" class="btn btn-primary w-full mt-8">Contact Us</a>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Integrations -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-16">
        Integrations & <span class="text-green">SDKs</span>
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">CRM</h5>
          <p class="text-sm">Salesforce, HubSpot</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">HRMS</h5>
          <p class="text-sm">BambooHR, Workday</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">eSign</h5>
          <p class="text-sm">DocuSign, Adobe Sign</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">Banking APIs</h5>
          <p class="text-sm">Core banking systems</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">Payment</h5>
          <p class="text-sm">Razorpay, Stripe</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h5 class="text-green mb-2">Storage</h5>
          <p class="text-sm">AWS S3, Google Cloud</p>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Security & Compliance -->
  <section class="section bg-black/20">
    <div class="container">
      <h2 class="text-center mb-16">
        Security & <span class="text-green">Compliance</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="glass p-6 text-center hover-lift">
          <h4 class="text-green mb-4">PII Protection</h4>
          <p>
            Advanced data encryption and privacy controls for sensitive
            information
          </p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h4 class="text-green mb-4">KYC Ready</h4>
          <p>Built-in compliance for Indian KYC and AML requirements</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h4 class="text-green mb-4">End-to-End Encryption</h4>
          <p>Message and document encryption throughout the entire workflow</p>
        </div>
        <div class="glass p-6 text-center hover-lift">
          <h4 class="text-green mb-4">Audit Trails</h4>
          <p>
            Complete audit logs and compliance reporting for regulatory
            requirements
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .pricing-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .pricing-card .button-row {
    margin-top: auto;
  }

  /* Modern table styling (consistent, themed, readable) */
  .modern-table-glass {
    background: rgba(24, 26, 20, 0.62);
    backdrop-filter: blur(12px);
    border-radius: 16px;
    border: 1.5px solid rgba(167, 210, 33, 0.14);
    box-shadow:
      0 4px 24px rgba(167, 210, 33, 0.06),
      0 1.5px 8px rgba(0, 0, 0, 0.09);
  }
  .modern-table {
    border-collapse: separate;
    border-spacing: 0;
    width: 100%;
    min-width: 700px;
  }
  .modern-table thead th {
    background: rgba(167, 210, 33, 0.12);
    color: #a7d221;
    font-weight: 800;
    font-size: 1.05em;
    padding: 15px 14px;
    border-bottom: 2px solid #a7d22144;
    text-align: left;
  }
  .modern-table tbody td {
    background: transparent;
    color: #f6ffe6;
    font-weight: 500;
    padding: 13px 14px;
    border-bottom: 1.5px solid rgba(167, 210, 33, 0.06);
  }
  .modern-table tbody tr:hover {
    background: rgba(167, 210, 33, 0.055);
  }
  .modern-table tbody td:first-child {
    font-weight: 700;
    color: #b8e32e;
  }

  @media (max-width: 900px) {
    .modern-table {
      min-width: 520px;
      font-size: 0.98em;
    }
    .modern-table-glass {
      padding: 0.5rem;
    }
  }
  @media (max-width: 640px) {
    .modern-table {
      min-width: 340px;
      font-size: 0.92em;
    }
    .modern-table-glass {
      padding: 0.1rem;
    }
  }

  /* Icon sizing & alignment for feature cards */
  .icon-box {
    width: 3rem;
    height: 3rem;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1rem;
    background: rgba(167, 210, 33, 0.17);
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .icon-svg {
    width: 1.65rem;
    height: 1.65rem;
    color: #a7d221;
  }

  /* Icon sizing for list ticks */
  .w-4 {
    width: 1rem;
  }
  .h-4 {
    height: 1rem;
  }
  .gap-2 {
    gap: 0.5rem;
  }
  .border-2 {
    border-width: 2px;
  }
</style>
