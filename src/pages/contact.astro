---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Frog8 - Contact | Let's Build the Future Together">
  <Navigation />

  <!-- Hero Section -->
  <section class="section gradient-bg pt-32 pb-10">
    <div class="container">
      <div class="text-center mb-14">
        <h1 class="fade-in mb-6">
          Let's build the future of <span class="text-green">access</span> — together
        </h1>
        <p class="fade-in-delay text-xl max-w-3xl mx-auto">
          Ready to transform your infrastructure with cutting-edge automation
          and seamless user experiences? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Contact Methods Panel -->
  <section class="section pb-8">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-8">
        <!-- Email -->
        <div class="glass p-8 text-center hover-lift">
          <div
            class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center"
          >
            <!-- Envelope -->
            <svg
              class="w-8 h-8 text-green"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
              ></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
              ></path>
            </svg>
          </div>
          <h3 class="text-green mb-4">Email Us</h3>
          <p class="mb-6">For partnerships, support, or general inquiries</p>
          <a href="mailto:hamid.ansari@f8payments.com" class="btn btn-primary"
            >Frog8 Email</a
          >
        </div>
        <!-- Call -->
        <div class="glass p-8 text-center hover-lift">
          <div
            class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center"
          >
            <!-- Phone -->
            <svg
              class="w-8 h-8 text-green"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
              ></path>
            </svg>
          </div>
          <h3 class="text-green mb-4">Call Us</h3>
          <p class="mb-6">Speak directly with our team</p>
          <a href="tel:+91-9167385810" class="btn btn-primary"> +91-XXXXXXXXXX</a
          >
        </div>
        <!-- Visit -->
        <div class="glass p-8 text-center hover-lift">
          <div
            class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center"
          >
            <!-- Location -->
            <svg
              class="w-8 h-8 text-green"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-green mb-4">Visit Us</h3>
          <p class="mb-6">Meet us at our HQ in India's tech capital</p>
          <span class="btn btn-secondary">Mumbai, India</span>
        </div>
      </div>
    </div>
  </section>

  <!-- WhatsApp Floating Button -->
  <a
    href="https://wa.me/+919820459958"
    target="_blank"
    rel="noopener"
    aria-label="Chat with us on WhatsApp"
    class="whatsapp-float"
  >
    <img src="../assets/whatsapp.png" alt="WhatsApp" class="whatsapp-img" />

    <span class="hidden md:inline ml-2"></span>
  </a>

  <div class="section-divider"></div>

  <!-- Quick Actions -->
  <section class="section pt-8 pb-8 bg-black/20">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="mb-6">Quick <span class="text-green">Actions</span></h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Request a Callback</h3>
          <p class="mb-6">Our team will call you at your preferred time</p>
          <a href="#" class="btn btn-primary">Request Callback</a>
        </div>
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Schedule a Demo</h3>
          <p class="mb-6">See our platforms in action</p>
          <a href="#" class="btn btn-primary">Schedule Demo</a>
        </div>
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Download Brochure</h3>
          <p class="mb-6">Detailed info about our solutions (PDF)</p>
          <a href="#" class="btn btn-primary">Download Brochure</a>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Grouped Contact & Project Planner -->
  <section class="section pt-8 pb-8">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-14">
        <!-- Contact Form -->
        <div>
          <div class="mb-10">
            <h2 class="mb-4">Get in <span class="text-green">Touch</span></h2>
            <p class="text-lg mb-6">
              Tell us about your project—response within 24 hours
            </p>
          </div>
          <div class="glass p-8 rounded-2xl">
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="f8-label">Full Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="f8-input"
                    placeholder="Your full name"
                  />
                </div>
                <div>
                  <label for="email" class="f8-label">Email Address *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="f8-input"
                    placeholder="your.email@company.com"
                  />
                </div>
              </div>
              <div>
                <label for="message" class="f8-label">Message *</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="f8-textarea"
                  placeholder="Tell us about your project, requirements, or how we can help you..."
                ></textarea>
              </div>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button type="submit" class="btn btn-primary"
                  >Send Message</button
                >
              </div>
            </form>
          </div>
        </div>
        <!-- Project Planner -->
        <div>
          <div class="mb-10">
            <h2 class="mb-4 text-green">Not sure where to start?</h2>
            <p class="text-lg mb-6">
              Use our quick project planner—our team will recommend the best
              path for you.
            </p>
          </div>
          <div class="glass p-8 rounded-2xl">
            <form class="space-y-6 text-left">
              <div>
                <label class="f8-label">Industry</label>
                <select class="f8-select">
                  <option>Transit / Metro</option>
                  <option>Banking / Finance</option>
                  <option>Retail</option>
                  <option>Government</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label class="f8-label">Solution Needed</label>
                <select class="f8-select">
                  <option>Kiosks / Hardware</option>
                  <option>Onboarding / KYC</option>
                  <option>Payments Integration</option>
                  <option>Analytics / Monitoring</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label class="f8-label">Estimated Budget</label>
                <input
                  type="text"
                  class="f8-input"
                  placeholder="eg. ₹5L - ₹50L"
                />
              </div>
              <button type="submit" class="btn btn-primary w-full mt-4"
                >Submit Project Details</button
              >
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- FAQ Section -->
  <section class="section bg-black/20 pt-8 pb-8">
    <div class="container">
      <h2 class="text-center mb-8">
        Frequently Asked <span class="text-green">Questions</span>
      </h2>
      <div class="max-w-2xl mx-auto space-y-4">
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Do you support PAN India deployments?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Yes, we deploy and maintain kiosks in every Indian state.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >How fast can I get a demo?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Usually within 24 hours—just use our form above!
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Can you customize solutions?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Absolutely. Nearly every deployment we do is tailored for each
            partner.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >What support do you provide?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            24/7 phone, WhatsApp, and email support. On-site engineers available
            as needed.
          </div>
        </details>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Newsletter Signup & Media Contact -->
  <section class="section pt-8 pb-8">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <div class="max-w-xl mx-auto glass p-8 text-center rounded-2xl">
            <h2 class="mb-4">
              Subscribe to Our <span class="text-green">Newsletter</span>
            </h2>
            <p class="mb-6 text-lg">
              Get the latest on fintech automation, digital infrastructure, and
              product updates from Frog8.
            </p>
            <form class="flex flex-col sm:flex-row gap-4 justify-center">
              <input
                type="email"
                name="newsletter"
                required
                class="f8-input"
                placeholder="Enter your email"
              />
              <button type="submit" class="btn btn-primary">Subscribe</button>
            </form>
          </div>
        </div>
        <div>
          <div class="max-w-xl mx-auto glass p-8 text-center rounded-2xl">
            <h4 class="text-green mb-4">Press & Media Inquiries</h4>
            <p class="mb-2 text-lg">Are you a journalist or analyst?</p>
            <a href="mailto:press@frog8.in" class="btn btn-secondary"
              >Contact Media Team</a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  :root {
    --f8-green: #a7d221;
    --f8-green-dark: #7aab1b;
  }

  body {
    background: #0c0e0f !important;
    color: #faffef;
    font-family: "Inter", "Manrope", "Segoe UI", "Poppins", system-ui, Arial,
      sans-serif !important;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  .section {
    background: transparent !important;
    padding-top: 2.7rem;
    padding-bottom: 2.7rem;
  }

  .section-divider {
    width: 100%;
    margin: 0 auto 2.5rem auto;
    height: 2.2px;
    background: linear-gradient(
      to right,
      transparent,
      var(--f8-green) 70%,
      transparent
    ) !important;
    opacity: 0.16 !important;
    border-radius: 3px;
  }

  .glass {
    background: rgba(18, 28, 28, 0.62) !important;
    border-radius: 1.2rem;
    box-shadow:
      0 2px 16px #a7d22123,
      0 1px 10px #001d0c11;
    border: 1.5px solid rgba(167, 210, 33, 0.13) !important;
    backdrop-filter: blur(8px);
  }

  .text-green,
  a.text-green,
  h1 span.text-green,
  h2 span.text-green,
  h3.text-green {
    color: var(--f8-green) !important;
  }

  input,
  textarea,
  select,
  .f8-input,
  .f8-select,
  .f8-textarea {
    width: 100%;
    padding: 1.13rem 1.13rem;
    border-radius: 1.15rem;
    border: 1.5px solid rgba(255, 255, 255, 0.11);
    background: rgba(16, 30, 23, 0.18);
    color: #fff;
    font-size: 1.09rem;
    margin-bottom: 0.9rem;
    outline: none;
    transition:
      border 0.17s,
      background 0.18s;
    box-shadow: 0 2px 16px #a7d22125;
    backdrop-filter: blur(7px);
  }

  input:focus,
  textarea:focus,
  select:focus,
  .f8-input:focus,
  .f8-select:focus,
  .f8-textarea:focus {
    border-color: var(--f8-green);
    background: rgba(10, 20, 14, 0.26);
  }

  input::placeholder,
  textarea::placeholder,
  select::placeholder,
  .f8-input::placeholder,
  .f8-select::placeholder,
  .f8-textarea::placeholder {
    color: #b8c77e;
    opacity: 0.86;
    font-weight: 400;
  }

  label.f8-label {
    font-weight: 600;
    margin-bottom: 0.55rem;
    color: #e5e5e5;
    letter-spacing: 0.01em;
    display: block;
  }

  .btn-primary {
    background: linear-gradient(
      90deg,
      var(--f8-green) 10%,
      #c0ee50 90%
    ) !important;
    color: #011;
    padding: 0.7rem 2.1rem;
    border-radius: 999px;
    font-weight: 600;
    border: none;
    box-shadow: 0 1px 8px #a7d22136;
    transition:
      background 0.18s,
      box-shadow 0.18s,
      color 0.14s;
  }

  .btn-primary:hover {
    background: #bce34d !important;
    color: #212800 !important;
    box-shadow: 0 2px 16px #a7d22175;
  }

  .btn-secondary {
    background: rgba(167, 210, 33, 0.11) !important;
    color: var(--f8-green) !important;
    border-radius: 999px;
    font-weight: 600;
    padding: 0.7rem 2.1rem;
    border: 1px solid var(--f8-green);
    transition:
      background 0.17s,
      color 0.12s;
  }
  .btn-secondary:hover {
    background: #b9d84b33 !important;
    color: #222 !important;
  }

  .hover-lift:hover {
    transform: translateY(-4px) scale(1.018);
    box-shadow: 0 8px 36px #a7d22144;
  }

  .whatsapp-float {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 50;
    display: flex;
    align-items: center;
    background: var(--f8-green);
    padding: 0.78rem 1.17rem;
    font-size: 1.13rem;
    color: #fff;
    border-radius: 9999px;
    font-weight: 600;
    box-shadow:
      0 6px 36px #a7d22155,
      0 1.5px 8px #3332;
    transition: transform 0.18s;
  }
  .whatsapp-float:hover {
    transform: translateY(-3px) scale(1.04);
    box-shadow:
      0 10px 44px #a7d221cc,
      0 1.5px 8px #2223;
  }
  .whatsapp-img {
    min-width: 30px;
    min-height: 30px;
    max-width: 34px;
    max-height: 34px;
    display: inline-block;
  }

  /* Responsive grids & spacing */
  @media (max-width: 900px) {
    .grid-cols-3,
    .grid-cols-4,
    .grid-cols-5 {
      grid-template-columns: repeat(1, minmax(0, 1fr)) !important;
    }
    .lg\:grid-cols-2 {
      grid-template-columns: 1fr !important;
    }
    .gap-14 {
      gap: 2.25rem !important;
    }
    .gap-12 {
      gap: 1.5rem !important;
    }
  }
  @media (max-width: 640px) {
    .w-16,
    .h-16 {
      width: 3.3rem !important;
      height: 3.3rem !important;
    }
    .p-8 {
      padding: 1.1rem !important;
    }
    .rounded-2xl {
      border-radius: 0.8rem !important;
    }
    .text-xl,
    .text-lg {
      font-size: 1.04rem !important;
    }
  }
</style>
