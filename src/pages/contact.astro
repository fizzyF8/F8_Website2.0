---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Frog8 - Contact | Let's Build the Future Together">
  <Navigation />
  
  <section class="section gradient-bg pt-32">
    <div class="container">
      <div class="text-center mb-16">
        <h1 class="fade-in mb-6">
          Let's build the future of <span class="text-green">access</span> â€” together
        </h1>
        <p class="fade-in-delay text-xl max-w-3xl mx-auto">
          Ready to transform your infrastructure with cutting-edge automation and seamless user experiences? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- Contact Info Panel -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <div class="glass p-8 text-center hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-green" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
          </div>
          <h3 class="text-green mb-4">Email Us</h3>
          <p class="mb-6">Get in touch for partnerships, support, or general inquiries</p>
          <a href="mailto:hello@frog8.in" class="btn btn-primary">hello@frog8.in</a>
        </div>
        
        <div class="glass p-8 text-center hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-green" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
          </div>
          <h3 class="text-green mb-4">Call Us</h3>
          <p class="mb-6">Speak directly with our team about your requirements</p>
          <a href="tel:+91-XXXXXXXXXX" class="btn btn-primary">+91-XXXXXXXXXX</a>
        </div>
        
        <div class="glass p-8 text-center hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-green/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-green" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-green mb-4">Visit Us</h3>
          <p class="mb-6">Meet us at our headquarters in India's tech capital</p>
          <span class="btn btn-secondary">Bengaluru, India</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- CTA Buttons -->
  <section class="section bg-black/20">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="mb-6">Quick <span class="text-green">Actions</span></h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Request a Callback</h3>
          <p class="mb-6">Have our team call you at your preferred time to discuss your requirements</p>
          <a href="#" class="btn btn-primary">Request Callback</a>
        </div>
        
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Schedule a Demo</h3>
          <p class="mb-6">See our platforms and kiosks in action with a personalized demonstration</p>
          <a href="#" class="btn btn-primary">Schedule Demo</a>
        </div>
        
        <div class="glass p-8 text-center hover-lift">
          <h3 class="text-green mb-4">Download Brochure</h3>
          <p class="mb-6">Get detailed information about our products and solutions in PDF format</p>
          <a href="#" class="btn btn-primary">Download Brochure</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- Contact Form -->
  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="mb-6">Get in <span class="text-green">Touch</span></h2>
          <p class="text-xl">Tell us about your project and we'll get back to you within 24 hours</p>
        </div>
        
        <div class="glass p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium mb-2">Full Name *</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 bg-black/30 border border-white/20 rounded-lg focus:border-green focus:outline-none"
                  placeholder="Your full name"
                >
              </div>
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email Address *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 bg-black/30 border border-white/20 rounded-lg focus:border-green focus:outline-none"
                  placeholder="your.email@company.com"
                >
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium mb-2">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 bg-black/30 border border-white/20 rounded-lg focus:border-green focus:outline-none resize-none"
                placeholder="Tell us about your project, requirements, or how we can help you..."
              ></textarea>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .px-4 { padding-left: 1rem; padding-right: 1rem; }
  .py-3 { padding-top: 0.75rem; padding-bottom: 0.75rem; }
  .resize-none { resize: none; }
  .focus\\:border-green:focus { border-color: #00ff88; }
  .focus\\:outline-none:focus { outline: none; }
</style>