---
import Layout from "../layouts/Layout.astro";
import VerticalNavigation from "../components/VerticalNavigation.astro";
import UnicornStudioEmbed from "../components/UnicornStudioEmbed.jsx";
import whatsapp from "../assets/whatsapp.png";
---

<Layout title="Frog8 - Contact | Let's Build the Future Together">
  <VerticalNavigation />

  <!-- Hero Section with Unicorn Studio Background -->
  <section class="hero-section-fullpage">
    <!-- Unicorn Studio Animation Background -->
    <UnicornStudioEmbed 
      client:visible 
      projectId="Ewoj40eRJR83ht443zTr"
      fullPage={true}
    />
    
    <!-- Content Overlay -->
    <div class="hero-content-overlay">
      <div class="hero-content-center">
        <h1 class="hero-title">
          Get in Touch with <span class="hero-highlight">Frog8</span>
        </h1>

        <p class="hero-subtitle">
          Reach our teams in Mumbai and Bengaluru to plan your transit, banking, or onboarding rollout.
        </p>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
      <div class="scroll-mouse">
        <div class="scroll-wheel"></div>
      </div>
      <p class="scroll-text">Scroll to explore</p>
    </div>
  </section>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const params = new URLSearchParams(window.location.search);
      if (params.get('status') === 'success') {
        const successEl = document.getElementById('form-success');
        if (successEl) {
          successEl.removeAttribute('hidden');
        }
      }
    });
  </script>

  <div class="section-divider"></div>

  <!-- [Updated: Frog8 Rebuild Nov 2025 - by Fizzy] -->
  <section class="section pb-8 contact-details-section">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="section-subheading">Talk to the Frog8 Team</h2>
        <p class="section-subtext">Our regional leads respond within 24 hours.</p>
      </div>
      <div class="grid contact-info-grid gap-8">
        <!-- Mumbai HQ -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="contact-title">Mumbai HQ</h3>
            <address class="contact-address">
              Frog8 Technologies Services Pvt. Ltd.<br />
              Mumbai, India
            </address>
            <div class="contact-glow"></div>
          </div>
        </div>
        <!-- Bengaluru -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M4 3h12l2 5-8 11-8-11 2-5z"></path>
              </svg>
            </div>
            <h3 class="contact-title">Bengaluru Operations</h3>
            <p class="contact-description">
              Care of AUM Infotech — <a
                href="https://maps.app.goo.gl/mcH12rqnKry8Sq917"
                target="_blank"
                rel="noopener noreferrer"
                class="contact-link inline-link"
                >View on Google Maps</a
              >
            </p>
            <div class="contact-glow"></div>
          </div>
        </div>
        <!-- Phone -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <h3 class="contact-title">Phone</h3>
            <a href="tel:+919820459958" class="contact-link">+91&nbsp;98204&nbsp;59958</a>
            <div class="contact-glow"></div>
          </div>
        </div>
        <!-- Email -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <h3 class="contact-title">Email</h3>
            <a href="mailto:sales@f8payments.com" class="contact-link">sales@f8payments.com</a>
            <div class="contact-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WhatsApp Floating Button -->
  <a
    href="https://wa.me/+919820459958"
    target="_blank"
    rel="noopener"
    aria-label="Chat with us on WhatsApp"
    class="whatsapp-float"
  >
    <img src={whatsapp.src} alt="WhatsApp" class="whatsapp-img" />

    <span class="hidden md:inline ml-2"></span>
  </a>


  <!-- Unified Contact Form -->
  <section class="section pt-8 pb-8">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-10">
          <h2 class="mb-4">Get in <span class="text-green">Touch</span></h2>
          <p class="text-lg mb-6">
            Tell us about your project or use our quick project planner—response within 24 hours
          </p>
        </div>
        <div class="glass p-8 rounded-2xl form-wrapper">
          <div id="form-success" class="form-success" role="status" hidden>
            Thanks for reaching out — our team will respond within 24 hours.
          </div>
          <form
            class="space-y-6"
            action="https://formsubmit.co/sales@f8payments.com"
            method="POST"
            autocomplete="on"
          >
            <input type="hidden" name="_subject" value="Frog8 Website Contact Submission" />
            <input type="hidden" name="_next" value="/contact?status=success" />
            <input type="hidden" name="_template" value="table" />
            <input type="hidden" name="_captcha" value="false" />

            <div class="sr-only spam-field">
              <label for="company-website">Company Website</label>
              <input
                id="company-website"
                type="text"
                name="_honey"
                tabindex="-1"
                autocomplete="off"
              />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="f8-label">Full Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="f8-input"
                  placeholder="Your full name"
                  autocomplete="name"
                />
              </div>
              <div>
                <label for="company" class="f8-label">Company *</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  required
                  class="f8-input"
                  placeholder="Organisation name"
                  autocomplete="organization"
                />
              </div>
            </div>

            <div>
              <label for="email" class="f8-label">Email Address *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="f8-input"
                placeholder="your.email@company.com"
                autocomplete="email"
              />
            </div>

            <div>
              <label for="product-interest" class="f8-label">Product Interest *</label>
              <select
                id="product-interest"
                name="product"
                class="f8-select"
                required
              >
                <option value="">Select a product</option>
                <option value="Transigo">Transigo</option>
                <option value="Navigo">Navigo</option>
                <option value="Veriphy">Veriphy</option>
                <option value="CTS">CTS</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="f8-label">Message *</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="f8-textarea"
                placeholder="Tell us about your deployment timeline, use case, or questions."
              ></textarea>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
              <button type="submit" class="btn btn-primary">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- FAQ Section -->
  <section class="section bg-white/20 pt-8 pb-8">
    <div class="container">
      <h2 class="text-center mb-8">
        Frequently Asked <span class="text-green">Questions</span>
      </h2>
      <div class="max-w-2xl mx-auto space-y-4">
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >How fast can I get a demo?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Usually within 24 hours—just use our form above!
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Can you customize solutions?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Absolutely. Every deployment we do is tailored for each
            partner.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Where are your kiosks currently deployed?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Our Transigo kiosks are live at Bengaluru Namma Metro stations, processing thousands of daily transactions with 99.9% uptime.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >What payment methods do your transit kiosks support?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            They support all digital payments including UPI and cards, along with NCMC card top-ups and QR code ticketing.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Can your kiosks issue bank cards instantly?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Yes, our upcoming Transigo 4000 series enables instant issuance of full-KYC, personalized RuPay + NCMC cards in under 45 seconds.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Do you provide solutions beyond transit?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Yes, we offer Navigo for banking automation (passbook printing, CTS) and Veriphy for messaging-native onboarding and KYC.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Is your infrastructure secure and compliant?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Absolutely. Our platforms are built with enterprise-grade security, end-to-end encryption, and are fully RBI and NCMC compliant.
          </div>
        </details>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Full-Page Hero Section */
  .hero-section-fullpage {
    position: relative;
    width: 100vw;
    height: 100vh;
    min-height: 100vh;
    overflow: hidden;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
    margin-left: calc(-280px - 3rem);
    margin-right: calc(-100vw + 100%);
  }

  @media (max-width: 1024px) {
    .hero-section-fullpage {
      margin-left: calc(-260px - 2rem);
    }
  }

  @media (max-width: 768px) {
    .hero-section-fullpage {
      width: 100% !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
    }
  }

  /* Content Overlay */
  .hero-content-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 50;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(
      ellipse at center,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 100%
    );
    padding: 2rem;
    margin: 0;
  }

  .hero-content-center {
    text-align: center;
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 0 auto;
    padding: 0 2rem;
    box-sizing: border-box;
  }

  /* Center content in full viewport (sidebar hidden in hero section) */
  @media (min-width: 1024px) {
    .hero-content-center {
      width: auto;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .hero-content-center {
      width: auto;
    }
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 70px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 60;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    animation: fadeInUp 1.5s ease-out 2s both;
  }

  .scroll-mouse {
    width: 26px;
    height: 40px;
    border: 2px solid rgba(167, 210, 33, 0.6);
    border-radius: 13px;
    position: relative;
    background: rgba(10, 10, 10, 0.3);
    backdrop-filter: blur(10px);
  }

  .scroll-wheel {
    width: 3px;
    height: 8px;
    background: #a7d221;
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.3;
    }
  }

  .scroll-text {
    color: rgba(167, 210, 33, 0.8);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.8);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  @keyframes fadeInUpHero {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hero Typography */
  .hero-title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 auto 1.5rem;
    color: #f5f5f5;
    text-align: center;
    width: 100%;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.5),
      0 4px 8px rgba(0, 0, 0, 0.4),
      0 8px 16px rgba(0, 0, 0, 0.3);
    animation: fadeInUpHero 1s ease-out 0.3s both;
  }

  .hero-text-line {
    display: inline-block;
    color: #f5f5f5;
    text-align: center;
  }

  .hero-highlight {
    display: inline-block;
    background: linear-gradient(135deg, #a7d221, #c4e845);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: #a7d221;
    position: relative;
    text-shadow: none;
    filter: drop-shadow(0 2px 8px rgba(167, 210, 33, 0.4));
  }

  /* Fallback for browsers that don't support background-clip */
  @supports not (-webkit-background-clip: text) {
    .hero-highlight {
      -webkit-text-fill-color: initial;
      color: #a7d221;
      text-shadow: 
        0 2px 4px rgba(0, 0, 0, 0.5),
        0 4px 8px rgba(167, 210, 33, 0.3);
    }
  }

  .hero-subtitle {
    color: #f5f5f5;
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 1.5;
    text-align: center;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.6),
      0 4px 8px rgba(0, 0, 0, 0.4);
    animation: fadeInUpHero 1s ease-out 0.5s both;
  }

  .section-subheading {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 600;
    color: var(--text);
  }

  .section-subtext {
    color: rgba(245, 245, 245, 0.75);
    max-width: 640px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .contact-info-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  @media (min-width: 1280px) {
    .contact-info-grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  @media (max-width: 992px) {
    .contact-info-grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }

  .contact-address {
    font-style: normal;
    color: rgba(245, 245, 245, 0.82);
    line-height: 1.6;
    text-align: center;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .inline-link {
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 0.95rem;
  }

  .contact-link:hover {
    color: var(--primary-light);
    transform: translateY(-1px);
  }

  /* Contact Cards */
  .contact-card {
    perspective: 1000px;
    min-height: 300px;
  }

  .contact-card:nth-child(1),
  .contact-card:nth-child(2),
  .contact-card:nth-child(3),
  .contact-card:nth-child(4) {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  @keyframes cardSlideIn {
    from {
      opacity: 0;
      transform: translateY(60px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .contact-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: rgba(26, 26, 26, 0.9);
    border-radius: 20px;
    padding: 2rem;
    border: 1px solid rgba(167, 210, 33, 0.25);
    transition: all 0.6s cubic-bezier(0.23, 1, 0.320, 1);
    transform-style: preserve-3d;
    overflow: hidden;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
  }

  .contact-card:hover .contact-card-inner {
    transform: rotateY(5deg) rotateX(5deg) translateZ(20px);
    border-color: rgba(167, 210, 33, 0.6);
    box-shadow: 
      0 20px 40px rgba(167, 210, 33, 0.2),
      0 0 0 1px rgba(167, 210, 33, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .contact-icon-container {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icon-bg {
    position: absolute;
    inset: 0;
    background: conic-gradient(from 0deg, #a7d221, #bdfc52, #a7d221);
    border-radius: 50%;
    opacity: 0.2;
    animation: iconRotate 8s linear infinite;
  }

  .contact-icon-bg::before {
    content: '';
    position: absolute;
    inset: 3px;
    background: rgba(26, 26, 26, 0.95);
    border-radius: 50%;
  }

  @keyframes iconRotate {
    to { transform: rotate(360deg); }
  }

  .contact-icon {
    width: 40px;
    height: 40px;
    color: #a7d221;
    z-index: 2;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-icon {
    color: #bdfc52;
    transform: scale(1.1) rotate(5deg);
  }

  .contact-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #a7d221;
    margin-bottom: 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-title {
    color: #bdfc52;
    transform: translateY(-2px);
  }

  .contact-description {
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    line-height: 1.6;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-description {
    color: rgba(255, 255, 255, 0.95);
  }

  .contact-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(167, 210, 33, 0.1) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
  }

  .contact-card:hover .contact-glow {
    opacity: 1;
  }

  .form-wrapper {
    position: relative;
  }

  .form-success {
    margin-bottom: 1.5rem;
    padding: 1rem 1.5rem;
    border-radius: 14px;
    background: rgba(167, 210, 33, 0.12);
    border: 1px solid rgba(167, 210, 33, 0.3);
    color: rgba(245, 245, 245, 0.9);
    text-align: center;
    font-weight: 600;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .spam-field {
    display: none;
  }

  /* Enhanced Buttons */
  .btn-enhanced {
    position: relative;
    overflow: hidden;
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-enhanced:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(167, 210, 33, 0.3);
  }

  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-enhanced:hover .btn-shine {
    left: 100%;
  }

  :root {
    --f8-green: #a7d221;
    --f8-green-dark: #8fb31c;
  }

  /* Page specific overrides are already handled by global dark theme */

  .section {
    background: transparent !important;
    padding-top: 2.7rem;
    padding-bottom: 2.7rem;
  }

  .section-divider {
    width: 100%;
    margin: 0 auto 2.5rem auto;
    height: 2.2px;
    background: linear-gradient(
      to right,
      transparent,
