---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import UnicornStudioEmbed from "../components/UnicornStudioEmbed.jsx";
import whatsapp from "../assets/whatsapp.png";
---

<Layout title="Frog8 - Contact | Let's Build the Future Together">
  <Navigation />

  <!-- Hero Section with Unicorn Studio Background -->
  <section class="hero-section-fullpage">
    <!-- Unicorn Studio Animation Background -->
    <UnicornStudioEmbed 
      client:load 
      projectId="Ewoj40eRJR83ht443zTr"
      fullPage={true}
    />
    
    <!-- Content Overlay -->
    <div class="hero-content-overlay">
      <div class="hero-content-center">
        <h1 class="hero-title">
          <span class="hero-text-line">Let's build the future of</span><br />
          <span class="hero-highlight">access</span>
          <span class="hero-text-line">— TOGETHER</span>
        </h1>
        
        <p class="hero-subtitle">
          Ready to transform your infrastructure with cutting-edge automation
          and seamless user experiences? We'd love to hear from you.
        </p>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
      <div class="scroll-mouse">
        <div class="scroll-wheel"></div>
      </div>
      <p class="scroll-text">Scroll to explore</p>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Contact Methods Panel -->
  <section class="section pb-8">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-8">
        <!-- Email -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <h3 class="contact-title">Email Us</h3>
            <p class="contact-description mb-6">For partnerships, support, or general inquiries</p>
            <a href="mailto:sales@f8payments.com" class="btn btn-primary btn-enhanced">
              <span>sales@f8payments.com</span>
              <div class="btn-shine"></div>
            </a>
            <div class="contact-glow"></div>
          </div>
        </div>
        <!-- Call -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <h3 class="contact-title">Call Us</h3>
            <p class="contact-description mb-6">Speak directly with our team of experts</p>
            <a href="tel:+91-9820459958" class="btn btn-primary btn-enhanced">
              <span>+91-9820459958</span>
              <div class="btn-shine"></div>
            </a>
            <div class="contact-glow"></div>
          </div>
        </div>
        <!-- Visit -->
        <div class="contact-card">
          <div class="contact-card-inner">
            <div class="contact-icon-container">
              <div class="contact-icon-bg"></div>
              <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="contact-title">Visit Us</h3>
            <p class="contact-description mb-6">Meet us at our HQ in India's tech capital</p>
            <span class="btn btn-primary btn-enhanced">
              <span>Mumbai, India</span>
              <div class="btn-shine"></div>
            </span>
            <div class="contact-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WhatsApp Floating Button -->
  <a
    href="https://wa.me/+919820459958"
    target="_blank"
    rel="noopener"
    aria-label="Chat with us on WhatsApp"
    class="whatsapp-float"
  >
    <img src={whatsapp.src} alt="WhatsApp" class="whatsapp-img" />

    <span class="hidden md:inline ml-2"></span>
  </a>


  <!-- Grouped Contact & Project Planner -->
  <section class="section pt-8 pb-8">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-14">
        <!-- Contact Form -->
        <div>
          <div class="mb-10">
            <h2 class="mb-4">Get in <span class="text-green">Touch</span></h2>
            <p class="text-lg mb-6">
              Tell us about your project—response within 24 hours
            </p>
          </div>
          <div class="glass p-8 rounded-2xl">
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="f8-label">Full Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="f8-input"
                    placeholder="Your full name"
                  />
                </div>
                <div>
                  <label for="email" class="f8-label">Email Address *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="f8-input"
                    placeholder="your.email@company.com"
                  />
                </div>
              </div>
              <div>
                <label for="message" class="f8-label">Message *</label>
                <textarea
                  id="message"
                  name="message"
                  rows="8"
                  required
                  class="f8-textarea"
                  placeholder="Tell us about your project, requirements, or how we can help you..."
                  style="height: 250px; width: 100%; resize: none;"></textarea>
              </div>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button type="submit" class="btn btn-primary"
                  >Send Message</button
                >
              </div>
            </form>
          </div>
        </div>
        <!-- Project Planner -->
        <div>
          <div class="mb-10">
            <h2 class="mb-4">
              Not sure <span class="text-green">where to start?</span>
            </h2>
            <p class="text-lg mb-6">
              Use our quick project planner—our team will guide you through it.
            </p>
          </div>
          <div class="glass p-8 rounded-2xl">
            <form class="space-y-6 text-left">
              <div>
                <label class="f8-label">Industry</label>
                <select class="f8-select">
                  <option>Transit / Metro</option>
                  <option>Banking / Finance</option>
                  <option>Retail</option>
                  <option>Government</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label class="f8-label">Solution Needed</label>
                <select class="f8-select">
                  <option>Kiosks / Hardware</option>
                  <option>Onboarding / KYC</option>
                  <option>Payments Integration</option>
                  <option>Analytics / Monitoring</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label class="f8-label">Estimated Budget</label>
                <input
                  type="text"
                  class="f8-input"
                  placeholder="eg. ₹5L - ₹50L"
                />
              </div>
              <button type="submit" class="btn btn-primary w-full mt-4"
                >Submit Project Details</button
              >
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- FAQ Section -->
  <section class="section bg-white/20 pt-8 pb-8">
    <div class="container">
      <h2 class="text-center mb-8">
        Frequently Asked <span class="text-green">Questions</span>
      </h2>
      <div class="max-w-2xl mx-auto space-y-4">
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Do you support PAN India deployments?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Yes, we deploy and maintain kiosks in every Indian state.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >How fast can I get a demo?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Usually within 24 hours—just use our form above!
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >Can you customize solutions?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            Absolutely. Nearly every deployment we do is tailored for each
            partner.
          </div>
        </details>
        <details class="glass p-4">
          <summary class="font-semibold text-green cursor-pointer"
            >What support do you provide?</summary
          >
          <div class="mt-2 text-white/80 text-sm">
            24/7 phone, WhatsApp, and email support. On-site engineers available
            as needed.
          </div>
        </details>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Full-Page Hero Section */
  .hero-section-fullpage {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 100vh;
    overflow: hidden;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  }

  /* Content Overlay */
  .hero-content-overlay {
    position: relative;
    z-index: 50;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(
      ellipse at center,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 100%
    );
    padding: 120px 2rem 2rem;
  }

  .hero-content-center {
    text-align: center;
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 60;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    animation: fadeInUp 1.5s ease-out 2s both;
  }

  .scroll-mouse {
    width: 26px;
    height: 40px;
    border: 2px solid rgba(167, 210, 33, 0.6);
    border-radius: 13px;
    position: relative;
    background: rgba(10, 10, 10, 0.3);
    backdrop-filter: blur(10px);
  }

  .scroll-wheel {
    width: 3px;
    height: 8px;
    background: #a7d221;
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.3;
    }
  }

  .scroll-text {
    color: rgba(167, 210, 33, 0.8);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.8);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  /* Hero Typography */
  .hero-title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 auto 1.5rem;
    color: #f5f5f5;
    text-align: center;
    width: 100%;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.5),
      0 4px 8px rgba(0, 0, 0, 0.4),
      0 8px 16px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 1s ease-out 0.3s both;
  }

  .hero-text-line {
    display: inline-block;
    color: #f5f5f5;
    text-align: center;
  }

  .hero-highlight {
    display: inline-block;
    background: linear-gradient(135deg, #a7d221, #c4e845);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: #a7d221;
    position: relative;
    text-shadow: none;
    filter: drop-shadow(0 2px 8px rgba(167, 210, 33, 0.4));
  }

  /* Fallback for browsers that don't support background-clip */
  @supports not (-webkit-background-clip: text) {
    .hero-highlight {
      -webkit-text-fill-color: initial;
      color: #a7d221;
      text-shadow: 
        0 2px 4px rgba(0, 0, 0, 0.5),
        0 4px 8px rgba(167, 210, 33, 0.3);
    }
  }

  .hero-subtitle {
    color: #f5f5f5;
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 1.5;
    text-align: center;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.6),
      0 4px 8px rgba(0, 0, 0, 0.4);
    animation: fadeInUp 1s ease-out 0.5s both;
  }

  /* Contact Cards */
  .contact-card {
    perspective: 1000px;
    height: 350px;
  }

  .contact-card:nth-child(1) { opacity: 1; transform: translateY(0) scale(1); }
  .contact-card:nth-child(2) { opacity: 1; transform: translateY(0) scale(1); }
  .contact-card:nth-child(3) { opacity: 1; transform: translateY(0) scale(1); }

  @keyframes cardSlideIn {
    from {
      opacity: 0;
      transform: translateY(60px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .contact-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: rgba(26, 26, 26, 0.9);
    border-radius: 20px;
    padding: 2rem;
    border: 1px solid rgba(167, 210, 33, 0.25);
    transition: all 0.6s cubic-bezier(0.23, 1, 0.320, 1);
    transform-style: preserve-3d;
    overflow: hidden;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
  }

  .contact-card:hover .contact-card-inner {
    transform: rotateY(5deg) rotateX(5deg) translateZ(20px);
    border-color: rgba(167, 210, 33, 0.6);
    box-shadow: 
      0 20px 40px rgba(167, 210, 33, 0.2),
      0 0 0 1px rgba(167, 210, 33, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .contact-icon-container {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icon-bg {
    position: absolute;
    inset: 0;
    background: conic-gradient(from 0deg, #a7d221, #bdfc52, #a7d221);
    border-radius: 50%;
    opacity: 0.2;
    animation: iconRotate 8s linear infinite;
  }

  .contact-icon-bg::before {
    content: '';
    position: absolute;
    inset: 3px;
    background: rgba(26, 26, 26, 0.95);
    border-radius: 50%;
  }

  @keyframes iconRotate {
    to { transform: rotate(360deg); }
  }

  .contact-icon {
    width: 40px;
    height: 40px;
    color: #a7d221;
    z-index: 2;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-icon {
    color: #bdfc52;
    transform: scale(1.1) rotate(5deg);
  }

  .contact-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #a7d221;
    margin-bottom: 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-title {
    color: #bdfc52;
    transform: translateY(-2px);
  }

  .contact-description {
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    line-height: 1.6;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-description {
    color: rgba(255, 255, 255, 0.95);
  }

  .contact-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(167, 210, 33, 0.1) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
  }

  .contact-card:hover .contact-glow {
    opacity: 1;
  }

  /* Enhanced Buttons */
  .btn-enhanced {
    position: relative;
    overflow: hidden;
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-enhanced:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(167, 210, 33, 0.3);
  }

  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-enhanced:hover .btn-shine {
    left: 100%;
  }

  :root {
    --f8-green: #a7d221;
    --f8-green-dark: #8fb31c;
  }

  /* Page specific overrides are already handled by global dark theme */

  .section {
    background: transparent !important;
    padding-top: 2.7rem;
    padding-bottom: 2.7rem;
  }

  .section-divider {
    width: 100%;
    margin: 0 auto 2.5rem auto;
    height: 2.2px;
    background: linear-gradient(
      to right,
      transparent,
      var(--f8-green) 70%,
      transparent
    ) !important;
    opacity: 0.16 !important;
    border-radius: 3px;
  }

  .glass {
    background: rgba(26, 26, 26, 0.85) !important;
    border-radius: 1.2rem;
    box-shadow:
      0 4px 24px rgba(0, 0, 0, 0.8),
      0 2px 12px rgba(167, 210, 33, 0.15);
    border: 1.5px solid rgba(167, 210, 33, 0.25) !important;
    backdrop-filter: blur(15px);
  }

  .text-green,
  a.text-green,
  h1 span.text-green,
  h2 span.text-green,
  h3.text-green {
    color: var(--f8-green) !important;
  }

  input,
  textarea,
  select,
  .f8-input,
  .f8-select,
  .f8-textarea {
    width: 100%;
    padding: 1.13rem 1.13rem;
    border-radius: 1.15rem;
    border: 1.5px solid rgba(167, 210, 33, 0.25);
    background: rgba(26, 26, 26, 0.8);
    color: var(--text);
    font-size: 1.09rem;
    margin-bottom: 0.9rem;
    outline: none;
    transition:
      border 0.17s,
      background 0.18s;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23a7d221' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 1.5em 1.5em;
    padding-right: 3rem;
  }

  input:focus,
  textarea:focus,
  select:focus,
  .f8-input:focus,
  .f8-select:focus,
  .f8-textarea:focus {
    border-color: var(--f8-green);
    background: rgba(30, 30, 30, 0.9);
    box-shadow: 0 0 0 3px rgba(167, 210, 33, 0.2);
  }

  /* Custom dropdown styling */
  select option {
    background: rgba(16, 30, 23, 0.95);
    color: #fff;
    padding: 0.75rem 1rem;
    border: none;
  }

  select option:hover,
  select option:focus {
    background: rgba(167, 210, 33, 0.3);
    color: #fff;
  }

  select option:checked,
  select option[selected] {
    background: var(--f8-green);
    color: #011;
    font-weight: 600;
  }

  /* Firefox specific dropdown styling */
  select:-moz-focusring {
    color: transparent;
    text-shadow: 0 0 0 #fff;
  }

  /* Safari/Chrome specific dropdown styling */
  select::-ms-expand {
    display: none;
  }

  /* Hide scrollbar for textarea */
  .f8-textarea::-webkit-scrollbar {
    display: none;
  }

  .f8-textarea {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* FAQ Styling */
  details.glass {
    transition: all 0.3s ease;
    border-radius: 1.2rem;
    overflow: hidden;
  }

  details.glass[open] {
    background: rgba(18, 28, 28, 0.75) !important;
    border-color: rgba(167, 210, 33, 0.25) !important;
    box-shadow:
      0 4px 20px #a7d22130,
      0 2px 12px #001d0c20;
  }

  details.glass summary {
    padding: 1.2rem 1.5rem;
    margin: -1rem -1rem 0 -1rem;
    border-radius: 1.2rem 1.2rem 0 0;
    transition: all 0.2s ease;
    position: relative;
  }

  details.glass[open] summary {
    border-bottom: 1px solid rgba(167, 210, 33, 0.2);
    background: rgba(167, 210, 33, 0.05);
  }

  details.glass summary:hover {
    background: rgba(167, 210, 33, 0.08);
  }

  details.glass summary::marker {
    color: var(--f8-green);
    font-size: 1.2em;
  }

  details.glass > div {
    padding: 1.5rem;
    margin: 0 -1rem -1rem -1rem;
    border-radius: 0 0 1.2rem 1.2rem;
    background: rgba(16, 30, 23, 0.3);
    line-height: 1.6;
  }

  input::placeholder,
  textarea::placeholder,
  select::placeholder,
  .f8-input::placeholder,
  .f8-select::placeholder,
  .f8-textarea::placeholder {
    color: #b8c77e;
    opacity: 0.86;
    font-weight: 400;
  }

  /* Ensure selected dropdown text is visible */
  select:not([size]) {
    color: #fff;
  }

  select:not([size]):focus {
    color: #fff;
  }

  label.f8-label {
    font-weight: 600;
    margin-bottom: 0.55rem;
    color: #e5e5e5;
    letter-spacing: 0.01em;
    display: block;
  }

  .btn-primary {
    background: linear-gradient(
      135deg,
