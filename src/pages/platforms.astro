---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import raahiLogo from "../assets/raahi.png";
import veriphyLogo from "../assets/veriphy.png";
---

<Layout title="Frog8 - Platforms | Connected Software Solutions">
  <Navigation />

  <section class="section gradient-bg pt-32">
    <div class="container">
      <div class="text-center mb-16">
        <h1 class="fade-in mb-6">
          Connected <span class="text-green">Platforms</span>
        </h1>
        <p class="fade-in-delay text-xl max-w-3xl mx-auto">
          Comprehensive software solutions powering the next generation of
          infrastructure across transit, banking, and public services.
        </p>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- Raahi Platform -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div class="slide-up">
          <div class="flex items-center mb-6">
            <div
              class="mr-4 bg-green/20 rounded-full flex items-center justify-center"
            >
              <Image
                src={raahiLogo}
                alt="Raahi Logo"
                class="platform-logo"
                loading="eager"
              />
            </div>
          </div>
          <h3 class="mb-6">Transit Card + App Platform</h3>
          <p class="mb-6">
            Complete NCMC issuance platform with UPI payments, rewards system,
            and embedded finance capabilities. Streamline transit operations
            with seamless payment integration.
          </p>
          <ul class="platform-features-list space-y-3 mb-8">
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >NCMC-compliant card issuance</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >UPI and multi-modal payments</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Rewards and loyalty programs</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Embedded finance services</span
              >
            </li>
          </ul>
          <a href="/contact" class="btn btn-primary">Learn More</a>
        </div>
        <div class="glass p-8">
          <div
            class="bg-gradient-to-br from-green/20 to-green-light/20 rounded-lg p-8 text-center"
          >
            <h4 class="text-green mb-4">Transit Revolution</h4>
            <p>
              Powering seamless journeys across India's metro networks with NCMC
              compliance and embedded finance
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Veriphy Platform -->
  <section class="section bg-black/20">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div class="glass p-8">
          <div
            class="bg-gradient-to-br from-green/20 to-green-light/20 rounded-lg p-8 text-center"
          >
            <h4 class="text-green mb-4">WhatsApp-First</h4>
            <p>
              Secure onboarding without apps or portals - messaging-native
              experience
            </p>
          </div>
        </div>
        <div class="slide-up">
          <div class="flex items-center mb-6">
            <div
              class="mr-4 bg-green/20 rounded-full flex items-center justify-center"
            >
              <Image
                src={veriphyLogo}
                alt="Veriphy Logo"
                class="platform-logo"
                loading="lazy"
              />
            </div>
          </div>
          <h3 class="mb-6">WhatsApp-First Onboarding</h3>
          <p class="mb-6">
            Secure, compliant onboarding platform that works through WhatsApp,
            Signal, iMessage, or email. No apps, no portals, no chaos.
          </p>
          <ul class="platform-features-list space-y-3 mb-8">
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Messaging-native experience</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Document capture and verification</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text">KYC and compliance ready</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Task tracking and management</span
              >
            </li>
          </ul>
          <a href="/veriphy" class="btn btn-primary">Explore Veriphy</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTS Platform -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div class="slide-up">
          <div class="flex items-center mb-6">
            <div
              class="w-16 h-16 mr-4 bg-green/20 rounded-full flex items-center justify-center"
            >
            </div>
            <h2 class="text-green">CTS</h2>
          </div>
          <h3 class="mb-6">Check Truncation System</h3>
          <p class="mb-6">
            Advanced document digitization platform built in partnership with
            Kores. Streamline banking operations with secure, compliant check
            processing and document management.
          </p>
          <ul class="platform-features-list space-y-3 mb-8">
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >RBI-compliant check truncation</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text">Document digitization</span>
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Automated processing workflows</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Banking integration ready</span
              >
            </li>
          </ul>
          <a href="/contact" class="btn btn-primary">Learn More</a>
        </div>
        <div class="glass p-8">
          <div
            class="bg-gradient-to-br from-green/20 to-green-light/20 rounded-lg p-8 text-center"
          >
            <h4 class="text-green mb-4">Banking Innovation</h4>
            <p>
              Transforming document processing for modern banks with Kores
              partnership
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Frog8 Connect -->
  <section class="section bg-black/20">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="glass p-8">
          <div
            class="bg-gradient-to-br from-green/20 to-green-light/20 rounded-lg p-8 text-center"
          >
            <h4 class="text-green mb-4">Always Connected</h4>
            <p>
              Remote monitoring and management for all devices and
              infrastructure
            </p>
          </div>
        </div>
        <div class="slide-up">
          <div class="flex items-center mb-6">
            <div
              class="w-16 h-16 mr-4 bg-green/20 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-8 h-8 text-green"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
              </svg>
            </div>
            <h2 class="text-green">Frog8 Connect</h2>
          </div>
          <h3 class="mb-6">Device Management Platform</h3>
          <p class="mb-6">
            Comprehensive remote device monitoring, software updates, app
            orchestration, and real-time analytics platform. Keep your
            infrastructure running smoothly 24/7.
          </p>
          <ul class="platform-features-list space-y-3 mb-8">
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text">Remote device monitoring</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Over-the-air software updates</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >App orchestration and deployment</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Real-time analytics and reporting</span
              >
            </li>
          </ul>
          <a href="/contact" class="btn btn-primary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .w-5 {
    width: 1.25rem;
  }
  .h-5 {
    height: 1.25rem;
  }
  .gap-3 {
    gap: 0.75rem;
  }
  .gap-2 {
    gap: 0.5rem;
  }
  .mr-4 {
    margin-right: 1rem;
  }

  .platform-tick {
    width: 1.18em !important;
    height: 1.18em !important;
    min-width: 1.18em !important;
    min-height: 1.18em !important;
    max-width: 1.18em !important;
    max-height: 1.18em !important;
    color: #a7d221;
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
    margin-right: 0.62em;
  }
  .platform-features-list li {
    align-items: center;
    min-height: 2.2em;
  }
  .platform-feature-text {
    color: #e6ffb7;
    font-weight: 500;
    font-size: 1.04em;
    letter-spacing: 0.01em;
  }
  .platform-logo {
    max-width: 30.2rem; /* desktop max size */
    max-height: 10.1rem;
    min-width: 8.2rem;
    min-height: 5.3rem;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }
  @media (max-width: 640px) {
    .platform-logo {
      max-width: 25.2rem; /* mobile size */
      max-height: 8.4rem;
      min-width: 6.3rem;
      min-height: 3rem;
    }
  }
</style>
