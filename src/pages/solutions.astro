---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import raahiLogo from "../assets/raahi.png";
import veriphyLogo from "../assets/veriphy.png";
---

<Layout title="Frog8 - Solutions | Connected Software Solutions">
  <Navigation />

  <section class="section gradient-bg pt-32 relative overflow-hidden hero-section">
    <!-- Advanced Background Effects -->
    <div class="absolute inset-0">
      <!-- Animated Grid -->
      <div class="absolute inset-0 opacity-5">
        <div class="grid-pattern"></div>
      </div>

      <!-- Floating Orbs -->
      <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-green/20 to-primary/20 rounded-full blur-3xl animate-float-slow"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-l from-primary/15 to-green/15 rounded-full blur-3xl animate-float-reverse"></div>
      <div class="absolute top-1/2 left-1/4 w-48 h-48 bg-green/10 rounded-full blur-2xl animate-drift"></div>

      <!-- Particle Effect -->
      <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
      </div>
    </div>

    <div class="container text-center relative z-10">
      <h1 class="hero-title mb-6 relative">
        <span class="hero-text-line">Connected</span>
        <span class="hero-highlight">Solutions</span>
      </h1>
      <p class="hero-subtitle text-xl max-w-3xl mx-auto">
        Comprehensive software solutions powering the next generation of
        infrastructure across transit, banking, and public services.
      </p>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- Raahi Platform -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div class="slide-up">
          <div class="flex items-center mb-6">
            <div
              class="mr-4 bg-green/20 rounded-full flex items-center justify-center hover-bounce"
            >
              <Image
                src={raahiLogo}
                alt="Raahi Logo"
                class="platform-logo float"
                loading="eager"
              />
            </div>
          </div>
          <h3 class="mb-6 hover-glow">Transit Card + App Platform</h3>
          <p class="mb-6">
            Complete NCMC issuance platform with UPI payments, rewards system,
            and embedded finance capabilities. Streamline transit operations
            with seamless payment integration.
          </p>
          <ul class="platform-features-list space-y-3 mb-8">
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >NCMC-compliant card issuance</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >UPI and multi-modal payments</span
              >
            </li>
            <li class="flex items-center">
              <svg
                class="platform-tick"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 20 20"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 11l3 3 7-7"></path>
              </svg>
              <span class="platform-feature-text"
                >Rewards and loyalty programs</span
              >
            </li>
            <li class="flex items-center">
