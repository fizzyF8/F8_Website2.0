</Layout>

<style>
  /* Advanced Hero Styles */
  .hero-section {
    max-height: 100vh;
    display: flex;
    align-items: center;
  }

  /* Animated Grid Pattern */
  .grid-pattern {
    background-image:
      linear-gradient(rgba(167, 210, 33, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(167, 210, 33, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    width: 100%;
    height: 100%;
    animation: gridMove 20s linear infinite;
  }

  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* Advanced Float Animations */
  @keyframes animate-float-slow {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(120deg); }
    66% { transform: translateY(10px) rotate(240deg); }
  }

  @keyframes animate-float-reverse {
    0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
    50% { transform: translateY(-30px) rotate(180deg) scale(1.1); }
  }

  @keyframes animate-drift {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(30px, -20px) rotate(90deg); }
    50% { transform: translate(-20px, -40px) rotate(180deg); }
    75% { transform: translate(-40px, 20px) rotate(270deg); }
  }

  .animate-float-slow { animation: animate-float-slow 8s ease-in-out infinite; }
  .animate-float-reverse { animation: animate-float-reverse 12s ease-in-out infinite; }
  .animate-drift { animation: animate-drift 15s ease-in-out infinite; }

  /* Particle System */
  .particles {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(167, 210, 33, 0.6);
    border-radius: 50%;
    animation: particleFloat 8s linear infinite;
  }

  .particle:nth-child(1) { left: 10%; animation-delay: 0s; animation-duration: 8s; }
  .particle:nth-child(2) { left: 30%; animation-delay: 2s; animation-duration: 12s; }
  .particle:nth-child(3) { left: 50%; animation-delay: 4s; animation-duration: 10s; }
  .particle:nth-child(4) { left: 70%; animation-delay: 6s; animation-duration: 14s; }
  .particle:nth-child(5) { left: 90%; animation-delay: 8s; animation-duration: 9s; }

  @keyframes particleFloat {
    0% {
      transform: translateY(100vh) scale(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
      transform: translateY(90vh) scale(1);
    }
    90% {
      opacity: 1;
      transform: translateY(10vh) scale(1);
    }
    100% {
      transform: translateY(-10vh) scale(0);
      opacity: 0;
    }
  }

  /* Hero Typography */
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
  }

  .hero-text-line {
    display: inline-block;
    opacity: 0;
    animation: textReveal 1s ease-out forwards;
  }

  .hero-highlight {
    display: inline-block;
    background: linear-gradient(135deg, #a7d221, #bdfc52);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    opacity: 0;
    animation: textReveal 1s ease-out 0.5s forwards;
  }

  .hero-highlight::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, #a7d221, #bdfc52);
    animation: underlineExpand 1s ease-out 1s forwards;
  }

  @keyframes textReveal {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes underlineExpand {
    to { width: 100%; }
  }

  .hero-subtitle {
    opacity: 1;
    transform: translateY(0);
  }

  .w-5 {
    width: 1.25rem;
  }
  .h-5 {
    height: 1.25rem;
  }
  .gap-3 {
    gap: 0.75rem;
  }
  .gap-2 {
    gap: 0.5rem;
  }
  .mr-4 {
    margin-right: 1rem;
  }

  .platform-tick {
    width: 1.18em !important;
    height: 1.18em !important;
    min-width: 1.18em !important;
    min-height: 1.18em !important;
    max-width: 1.18em !important;
    max-height: 1.18em !important;
    color: #a7d221;
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
    margin-right: 0.62em;
  }
  .platform-features-list li {
    align-items: center;
    min-height: 2.2em;
  }
  .platform-feature-text {
    color: var(--text);
    font-weight: 500;
    font-size: 1.04em;
    letter-spacing: 0.01em;
  }
  .platform-logo {
    max-width: 30.2rem; /* desktop max size */
    max-height: 10.1rem;
    min-width: 8.2rem;
    min-height: 5.3rem;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }
  /* Mobile responsive styles */
  @media (max-width: 480px) {
    .platform-logo {
      max-width: 20rem;
      max-height: 6rem;
      min-width: 5rem;
      min-height: 2.5rem;
    }

    .grid.grid-cols-1.lg\\:grid-cols-2 {
      gap: 2rem;
    }

    .flex.items-center.mb-6 {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .w-16.h-16 {
      width: 3rem;
      height: 3rem;
    }

    .mr-4 {
      margin-right: 0;
      margin-bottom: 0.5rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    h3 {
      font-size: 1.3rem;
      text-align: center;
    }

    .platform-features-list {
      margin-bottom: 1.5rem;
    }

    .platform-features-list li {
      padding: 0.5rem 0;
    }

    .platform-feature-text {
      font-size: 0.95rem;
    }

    .btn {
      width: 100%;
      text-align: center;
      margin-top: 1rem;
    }

    .p-8 {
      padding: 1.5rem;
    }

    .glass {
      border-radius: 16px;
    }
  }

  @media (max-width: 640px) {
    .platform-logo {
      max-width: 25.2rem; /* mobile size */
      max-height: 8.4rem;
      min-width: 6.3rem;
      min-height: 3rem;
    }

    .grid.grid-cols-1.lg\\:grid-cols-2 {
      gap: 3rem;
    }

    .flex.items-center {
      flex-direction: column;
      text-align: center;
    }

    .mr-4 {
      margin-right: 0;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 768px) {
    .grid.grid-cols-1.lg\\:grid-cols-2 {
      grid-template-columns: 1fr;
    }

    .slide-up {
      text-align: center;
    }
  }
</style>