---
import Layout from '../layouts/Layout.astro';
import VerticalNavigation from '../components/VerticalNavigation.astro';
import UnicornStudioEmbed from '../components/UnicornStudioEmbed.jsx';
import CredibilityCarousel from '../components/CredibilityCarousel.tsx';
import VideoButton from '../components/VideoButton.jsx';
import tvm2000Modi from '../assets/kiosks/TVM 2000/tvm2000_modi.jpg';
import tvm2000Modi2 from '../assets/kiosks/TVM 2000/tvm2000_modi_2.jpg';
import tvm2000Modi3 from '../assets/kiosks/TVM 2000/tvm2000_modi_3.jpg';
import tvm2kAdVideo from '../assets/kiosks/TVM 2000/tvm2k_ad.mp4';
---

<Layout>
  <VerticalNavigation />
  
  <!-- Full-Page Hero Section with Unicorn Studio Background -->
  <section class="hero-section-fullpage">
    <!-- Unicorn Studio Animation Background -->
    <UnicornStudioEmbed 
      client:load 
      projectId="1qpipNvszw8yfmoe6OyZ"
      fullPage={true}
    />
    
    <!-- Content Overlay -->
    <div class="hero-content-overlay">
      <div class="hero-content-center">
          <h1 class="hero-title">
            <span class="hero-text-line">Powering India Next:</span><br />
            <span class="hero-highlight">Seamless Journeys</span><span class="hero-text-line">, Smarter Access</span>
          </h1>
          
          <p class="hero-subtitle">
            Unattended automation. Design-first experiences. Building for the next 100 million.
          </p>
          
          <p class="hero-description">
            Frog8 builds connected platforms and intelligent kiosks that transform access—across transit, banking, and public services. From metro stations to rural banks, our solutions simplify how India moves, pays, and verifies.
          </p>
          
          <div class="hero-cta">
            <a href="/contact" class="btn btn-primary">
              <span>Schedule a Demo</span>
              <div class="btn-shine"></div>
            </a>
            <a href="/platforms" class="btn btn-secondary">
              <span>Explore Our Offerings</span>
              <div class="btn-shine"></div>
            </a>
          </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
      <div class="scroll-mouse">
        <div class="scroll-wheel"></div>
      </div>
      <p class="scroll-text">Scroll to explore</p>
    </div>
  </section>

  <!-- [Updated: Frog8 Rebuild Nov 2025 - by Fizzy] -->
  <section class="credibility-strip">
    <div class="container">
      <div class="credibility-grid glass">
        <div class="credibility-copy">
          <p class="credibility-text">
            Trusted by India’s Leaders — PM Modi inaugurated and used our Transigo kiosk at Namma Metro.
          </p>
          <div class="credibility-badges">
            <span class="credibility-badge">BMRCL Yellow Line</span>
            <span class="credibility-badge">Inaugurated by PM Modi</span>
            <span class="credibility-badge">Live Passenger Deployments</span>
          </div>
          <div class="credibility-actions">
            <VideoButton 
              client:load
              videoSrc={tvm2kAdVideo}
              className="btn btn-outline-primary"
            >
              Watch Video
            </VideoButton>
            <a 
              href="https://archive.is/H8DGh" 
              class="btn btn-primary"
              target="_blank"
              rel="noopener noreferrer"
            >
              Read Press Coverage
            </a>
          </div>
        </div>
        <CredibilityCarousel 
          client:load
          images={[
            { src: tvm2000Modi.src, alt: 'Prime Minister Narendra Modi inaugurating the Transigo kiosk at Namma Metro' },
            { src: tvm2000Modi2.src, alt: 'Dignitaries touring the Transigo kiosk during the Namma Metro launch' },
            { src: tvm2000Modi3.src, alt: 'Commuters engaging with the Transigo kiosk at the metro station' }
          ]}
        />
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- Our Ethos -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="slide-up mb-6">Our <span class="text-primary">Ethos</span></h2>
        <p class="text-xl max-w-3xl mx-auto">
          We believe in building technology that bridges the gap between infrastructure and human experience.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="ethos-card" data-tilt>
          <div class="ethos-card-inner">
            <div class="ethos-icon-container">
              <div class="ethos-icon-bg"></div>
              <svg class="ethos-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="ethos-title">Speed & Efficiency</h3>
            <p class="ethos-description">Streamlined processes that save time and reduce friction in everyday transactions.</p>
            <div class="ethos-glow"></div>
          </div>
        </div>

        <div class="ethos-card" data-tilt>
          <div class="ethos-card-inner">
            <div class="ethos-icon-container">
              <div class="ethos-icon-bg"></div>
              <svg class="ethos-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <h3 class="ethos-title">Security First</h3>
            <p class="ethos-description">Enterprise-grade security with end-to-end encryption and compliance built-in.</p>
            <div class="ethos-glow"></div>
          </div>
        </div>

        <div class="ethos-card" data-tilt>
          <div class="ethos-card-inner">
            <div class="ethos-icon-container">
              <div class="ethos-icon-bg"></div>
              <svg class="ethos-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="ethos-title">Inclusive Design</h3>
            <p class="ethos-description">Solutions that work for everyone, from tech-savvy urbanites to first-time digital users.</p>
            <div class="ethos-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- [Updated: Frog8 Rebuild Nov 2025 - by Fizzy] -->
  <section class="section what-we-build-section">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="slide-up mb-6">What We <span class="text-primary">Build</span></h2>
        <p class="text-xl max-w-3xl mx-auto">
          Purpose-built solutions delivering secure transit, banking, and onboarding infrastructure at scale.
        </p>
      </div>

      <div class="what-we-build-grid">
        <article class="glass solution-card">
          <div class="solution-card-header">
            <h3>Transigo</h3>
            <p class="solution-subtitle">Transit Kiosks</p>
          </div>
          <p class="solution-description">Ticketing, Payments, Issuance</p>
          <a href="/transigo" class="btn btn-primary solution-cta">
            Explore Transigo
          </a>
        </article>

        <article class="glass solution-card">
          <div class="solution-card-header">
            <h3>Navigo</h3>
            <p class="solution-subtitle">Banking Automation</p>
          </div>
          <p class="solution-description">Passbook Printing, CTS, Card Issuance</p>
          <a href="/navigo" class="btn btn-primary solution-cta">
            Explore Navigo
          </a>
        </article>

        <article class="glass solution-card">
          <div class="solution-card-header">
            <h3>Veriphy</h3>
            <p class="solution-subtitle">Messaging-Native Onboarding</p>
          </div>
          <p class="solution-description">KYC, Workflow, Automation</p>
          <a href="/veriphy" class="btn btn-primary solution-cta">
            Explore Veriphy
          </a>
        </article>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- [Updated: Frog8 Rebuild Nov 2025 - by Fizzy] -->
  <section class="section quick-metrics-section">
    <div class="container">
      <div class="quick-metrics glass">
        <div class="metrics-item">
          <span class="metrics-value">1500+</span>
          <span class="metrics-label">Daily transactions - Transigo</span>
        </div>
        <div class="metrics-item">
          <span class="metrics-value">99.9%</span>
          <span class="metrics-label">Uptime</span>
        </div>
        <div class="metrics-item">
          <span class="metrics-value">5+</span>
          <span class="metrics-label">Active stations</span>
        </div>
        <div class="metrics-item">
          <span class="metrics-value">RBI + NCMC</span>
          <span class="metrics-label">Compliant infrastructure</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider"></div>

  <!-- [Updated: Frog8 Rebuild Nov 2025 - by Fizzy] -->
  <section class="section">
    <div class="container">
      <div class="glass bottom-cta">
        <h2 class="slide-up mb-6">Ready to Build Smarter Infrastructure?</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          Let’s plan your rollout across transit, banking, or public service locations with resilient infrastructure.
        </p>
        <a href="/contact-demo" class="btn btn-primary">Request a Demo</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .p-12 { padding: 3rem; }

  /* Mobile responsive styles */
  @media (max-width: 480px) {
    .p-12 { 
      padding: 1.5rem; 
    }
    
    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
    }
    
    .hero-buttons .btn {
      width: 100%;
      text-align: center;
    }
    
    .grid.grid-cols-1.md\\:grid-cols-3 {
      gap: 1.5rem;
    }
    
    .grid.grid-cols-1.md\\:grid-cols-2 {
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .p-12 { 
      padding: 2rem; 
    }
  }

  /* Full-Page Hero Section */
  .hero-section-fullpage {
    position: relative;
    width: 100vw;
    height: 100vh;
    min-height: 100vh;
    overflow: hidden;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
    left: calc(-280px - 3rem);
    margin-right: calc(-100vw + 100%);
  }

  /* Content Overlay */
  .hero-content-overlay {
    position: relative;
    z-index: 50;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(
      ellipse at center,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.6) 100%
    );
    padding: 2rem;
    margin: 0;
    left: calc(280px + 3rem);
    margin-left: calc(-280px - 3rem);
  }

  .hero-content-center {
    text-align: center;
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 60;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    animation: fadeInUp 1.5s ease-out 2s both;
  }

  .scroll-mouse {
    width: 26px;
    height: 40px;
    border: 2px solid rgba(167, 210, 33, 0.6);
    border-radius: 13px;
    position: relative;
    background: rgba(10, 10, 10, 0.3);
    backdrop-filter: blur(10px);
  }

  .scroll-wheel {
    width: 3px;
    height: 8px;
    background: #a7d221;
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.3;
    }
  }

  .scroll-text {
    color: rgba(167, 210, 33, 0.8);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.8);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  /* Hero Typography */
  .hero-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 auto 1.5rem;
    color: #f5f5f5;
    text-align: center;
    width: 100%;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.5),
      0 4px 8px rgba(0, 0, 0, 0.4),
      0 8px 16px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 1s ease-out 0.3s both;
    margin-left: 750px;

  }

  .hero-text-line {
    display: inline-block;
    color: #f5f5f5;
    text-align: center;
  }

  .hero-highlight {
    display: inline-block;
    background: linear-gradient(135deg, #a7d221, #c4e845);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: #a7d221; /* fallback color */
    position: relative;
    text-shadow: none;
    filter: drop-shadow(0 2px 8px rgba(167, 210, 33, 0.4));
  }

  /* Fallback for browsers that don't support background-clip */
  @supports not (-webkit-background-clip: text) {
    .hero-highlight {
      -webkit-text-fill-color: initial;
      color: #a7d221;
      text-shadow: 
        0 2px 4px rgba(0, 0, 0, 0.5),
        0 4px 8px rgba(167, 210, 33, 0.3);
    }
  }

  .hero-subtitle {
    color: #f5f5f5;
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 1.5;
    text-align: center;
    width: 100%;
    margin: 0 auto;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.6),
      0 4px 8px rgba(0, 0, 0, 0.4);
    animation: fadeInUp 1s ease-out 0.5s both;
    margin-left: 750px;

  }

  .hero-description {
    color: rgba(245, 245, 245, 0.9);
    font-size: 1rem;
    line-height: 1.6;
    font-weight: 400;
    text-align: center;
    width: 100%;
    margin: 0 auto;
    text-shadow: 
      0 2px 4px rgba(0, 0, 0, 0.6),
      0 4px 8px rgba(0, 0, 0, 0.4);
    animation: fadeInUp 1s ease-out 0.7s both;
    margin-left: 750px;

  }

  .hero-cta {
    animation: fadeInUp 1s ease-out 0.9s both;
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 1rem;
    margin-left:400px;

  }

  .hero-cta .btn {
    min-width: 180px;
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 20px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .hero-cta .btn-primary {
    background: linear-gradient(135deg, #a7d221 0%, #b8e32e 100%);
    color: #0a0a0a;
    border: none;
  }

  .hero-cta .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(167, 210, 33, 0.4);
    background: linear-gradient(135deg, #b8e32e 0%, #c4e845 100%);
  }

  .hero-cta .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #f5f5f5;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  .hero-cta .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.1);
  }

  /* Enhanced Buttons */
  .btn-enhanced {
    position: relative;
    overflow: hidden;
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-enhanced:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(167, 210, 33, 0.3);
  }

  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-enhanced:hover .btn-shine {
    left: 100%;
  }

  /* Credibility Strip */
  .credibility-strip {
    padding: 2rem 0 3rem;
    background: transparent;
  }

  .credibility-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
    align-items: center;
    gap: 2rem;
    padding: 1.75rem 2.5rem;
  }

  .credibility-copy {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
    align-self: stretch;
    justify-content: center;
  }

  .credibility-text {
    color: #f5f5f5;
    font-size: 1.0625rem;
    line-height: 1.6;
    max-width: 60ch;
  }

  .credibility-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .credibility-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    background: rgba(167, 210, 33, 0.12);
    border: 1px solid rgba(167, 210, 33, 0.3);
    color: #b8e32e;
    font-size: 0.875rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    line-height: 1.2;
    box-shadow:
      0 8px 18px rgba(167, 210, 33, 0.14),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  .credibility-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .btn.btn-outline-primary {
    background: transparent;
    color: #a7d221;
    border: 2px solid rgba(167, 210, 33, 0.7);
    box-shadow: none;
  }

  .btn.btn-outline-primary:hover {
    background: linear-gradient(135deg, rgba(167, 210, 33, 0.15), rgba(184, 227, 46, 0.25));
    color: #0a0a0a;
    border-color: rgba(167, 210, 33, 0.9);
    box-shadow: 0 12px 24px rgba(167, 210, 33, 0.2);
  }

  /* What We Build */
  .what-we-build-section {
    background: transparent;
  }

  .what-we-build-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.75rem;
  }

  .solution-card {
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    position: relative;
    overflow: hidden;
    align-items: center;
    text-align: center;
  }

  .solution-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(167, 210, 33, 0.08), rgba(184, 227, 46, 0.04));
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .solution-card:hover::after {
    opacity: 1;
  }

  .solution-card-header {
    text-align: center;
  }

  .solution-card-header h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #f5f5f5;
    margin-bottom: 0.25rem;
  }

  .solution-subtitle {
    font-size: 1rem;
    color: rgba(245, 245, 245, 0.7);
    font-weight: 500;
  }

  .solution-description {
    color: rgba(245, 245, 245, 0.75);
    font-size: 1rem;
    text-align: center;
  }

  .solution-cta {
    align-self: center;
  }

  /* Quick Metrics */
  .quick-metrics-section {
    background: transparent;
  }

  .quick-metrics {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 1.5rem;
    padding: 2rem 2.5rem;
    align-items: stretch;
  }

  .metrics-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
    text-align: center;
  }

  .metrics-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: #a7d221;
  }

  .metrics-label {
    font-size: 0.95rem;
    color: rgba(245, 245, 245, 0.75);
  }

  /* Bottom CTA */
  .bottom-cta {
    padding: 3rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  /* Ethos Cards */
  .ethos-card {
    perspective: 1000px;
    height: 320px;
  }

  .ethos-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(26, 26, 26, 0.9) 0%, 
      rgba(30, 30, 30, 0.85) 100%
    );
    backdrop-filter: blur(20px);
    border-radius: 20px;
    padding: 2rem;
    border: 1px solid rgba(167, 210, 33, 0.2);
    transition: all 0.6s cubic-bezier(0.23, 1, 0.320, 1);
    transform-style: preserve-3d;
    overflow: hidden;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(167, 210, 33, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .ethos-card:hover .ethos-card-inner {
    transform: rotateY(5deg) rotateX(5deg) translateZ(20px);
    border-color: rgba(167, 210, 33, 0.4);
    box-shadow: 
      0 20px 60px rgba(167, 210, 33, 0.25),
      0 10px 30px rgba(0, 0, 0, 0.8),
      0 4px 16px rgba(167, 210, 33, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

