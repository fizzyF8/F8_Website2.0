---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---

<footer class="footer glass-dark">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company -->
      <div class="fade-in">
        <div class="logo-container mb-12">
          <a href="/" class="block">
            <Image 
              src={logo} 
              alt="Frog8 Logo" 
              width={100}
              height={70}
              class="h-10 w-auto"
              loading="lazy"
            />
          </a>
        </div>
        <p class="footer-text mb-6">
          Building the next generation of infrastructure for India.
        </p>
        <div class="flex space-x-4">
          <a href="https://twitter.com/frog8" target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Twitter">
