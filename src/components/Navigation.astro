---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import MobileMenu from './MobileMenu.jsx';

const { pathname } = Astro.url;

const isActive = (href: string) => {
  if (href === '/') {
    return pathname === '/';
  }
  return pathname.startsWith(href);
};
---

<nav class="fixed top-0 left-0 z-[100] nav-white">
  <div class="nav-container">
    <div class="nav-content">
      <div class="flex items-center">
        <a href="/" class="scale-in logo-container">
          <Image 
            src={logo} 
            alt="Frog8 Logo" 
            width={100}
            height={65}
            class="h-10 w-auto logo-image"
            loading="eager"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={`nav-link ${isActive('/') ? 'nav-link--active' : ''}`} aria-current={isActive('/') ? 'page' : undefined}>Home</a>
        <a href="/platforms" class={`nav-link ${isActive('/platforms') ? 'nav-link--active' : ''}`} aria-current={isActive('/platforms') ? 'page' : undefined}>Solutions</a>
        <a href="/kiosks" class={`nav-link ${isActive('/kiosks') ? 'nav-link--active' : ''}`} aria-current={isActive('/kiosks') ? 'page' : undefined}>Devices</a>
        <a href="/deployments" class={`nav-link ${isActive('/deployments') ? 'nav-link--active' : ''}`} aria-current={isActive('/deployments') ? 'page' : undefined}>Deployments</a>
        <a href="/about" class={`nav-link ${isActive('/about') ? 'nav-link--active' : ''}`} aria-current={isActive('/about') ? 'page' : undefined}>About</a>
      </div>

      <!-- Get Started Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn btn-primary">Get Started</a>
      </div>

      <!-- Mobile Menu -->
      <MobileMenu client:load />
    </div>
  </div>
</nav>

<style>
  .nav-container {
    width: 100%;
  }

  .nav-content {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.6rem 0;
  }

  .nav-white {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.45) 0%, 
      rgba(255, 255, 255, 0.32) 45%,
      rgba(255, 255, 255, 0.38) 100%
    );
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border-bottom: 1px solid rgba(10, 10, 10, 0.06);
    border-top: 1px solid rgba(255, 255, 255, 0.32);
    box-shadow: 
      0 10px 36px rgba(10, 10, 10, 0.14),
      0 4px 18px rgba(167, 210, 33, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.28);
    position: fixed;
    top: 1.5rem;
    left: 50%;
    z-index: 9999;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
    width: min(1440px, calc(100% - 0.5rem));
    border-radius: 999px;
    padding: 0.35rem 2.25rem;
  }

  .nav-white:hover {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.52) 0%, 
      rgba(255, 255, 255, 0.38) 50%,
      rgba(255, 255, 255, 0.44) 100%
    );
    box-shadow: 
      0 14px 44px rgba(10, 10, 10, 0.16),
      0 6px 22px rgba(167, 210, 33, 0.14),
      inset 0 1px 0 rgba(255, 255, 255, 0.34);
  }

  .nav-link {
    color: #111111;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.32);
  }

  .nav-link:hover {
    color: #111111;
    background: rgba(255, 255, 255, 0.52);
    transform: translateY(-1px);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.7);
  }

  .nav-link--active {
    color: var(--primary-dark);
    background: rgba(167, 210, 33, 0.2);
    text-shadow: none;
  }

  .nav-link--active::after {
    width: 90%;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
    transform: translateX(-50%);
  }

  .nav-link:hover::after {
    width: 80%;
  }

  /* Logo styling for glass effect */
  .logo-container {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin-left: 0;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }
  
  /* Adjust logo position on mobile */
  @media (max-width: 768px) {
    .logo-container {
      margin-left: 0;
    }
  }

  @media (max-width: 768px) {
    .nav-content {
      padding: 0.4rem 0;
    }

    .nav-white {
      top: 1rem;
      width: calc(100% - 0.5rem);
      padding: 0.4rem 0.85rem;
      border-radius: 24px;
    }

  }

  .logo-image {
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  /* Utility classes */
  .w-6 { width: 1.5rem; }
  .h-6 { height: 1.5rem; }
  .py-6 { padding-top: 1.5rem; padding-bottom: 1.5rem; }
  .pb-6 { padding-bottom: 1.5rem; }
  .ml-4 { margin-left: 1rem; }
  .mt-4 { margin-top: 1rem; }
  .w-full { width: 100%; }

  /* Mobile responsive improvements */
  @media (max-width: 768px) {
    .nav-gradient {
      padding: 0.5rem 0;
    }
    
    .py-6 {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
  }
</style>