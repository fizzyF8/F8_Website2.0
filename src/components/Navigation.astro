---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import MobileMenu from './MobileMenu.jsx';
---

<nav class="fixed top-0 left-0 right-0 z-[100] nav-white">
  <div class="container">
    <div class="flex items-center justify-between py-6">
      <div class="flex items-center">
        <a href="/" class="scale-in logo-container">
          <Image 
            src={logo} 
            alt="Frog8 Logo" 
            width={100}
            height={65}
            class="h-10 w-auto logo-image"
            loading="eager"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="nav-link">Home</a>
        <a href="/solutions" class="nav-link">Solutions</a>
        <a href="/kiosks" class="nav-link">Devices</a>
        <a href="/veriphy" class="nav-link">Veriphy</a>
        <a href="/deployments" class="nav-link">Deployments</a>
        <a href="/about" class="nav-link">About</a>
      </div>

      <!-- Get Started Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn btn-primary">Get Started</a>
      </div>

      <!-- Mobile Menu -->
      <MobileMenu client:load />
    </div>
  </div>
</nav>

<style>
  .nav-white {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.05) 0%, 
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.04) 100%
    );
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.1),
      0 2px 16px rgba(167, 210, 33, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-white:hover {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.08) 0%, 
      rgba(255, 255, 255, 0.04) 50%,
      rgba(255, 255, 255, 0.06) 100%
    );
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.15),
      0 4px 20px rgba(167, 210, 33, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .nav-link {
    color: #f5f5f5;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  .nav-link:hover {
    color: var(--primary);
    background: rgba(167, 210, 33, 0.2);
    transform: translateY(-1px);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.7);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
    transform: translateX(-50%);
  }

  .nav-link:hover::after {
    width: 80%;
  }

  /* Logo styling for glass effect */
  .logo-container {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin-left: -2.5rem;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }
  
  /* Adjust logo position on mobile */
  @media (max-width: 768px) {
    .logo-container {
      margin-left: 0;
    }
  }

  .logo-image {
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  /* Utility classes */
  .w-6 { width: 1.5rem; }
  .h-6 { height: 1.5rem; }
  .py-6 { padding-top: 1.5rem; padding-bottom: 1.5rem; }
  .pb-6 { padding-bottom: 1.5rem; }
  .ml-4 { margin-left: 1rem; }
  .mt-4 { margin-top: 1rem; }
  .w-full { width: 100%; }

  /* Mobile responsive improvements */
  @media (max-width: 768px) {
    .nav-gradient {
      padding: 0.5rem 0;
    }
    
    .py-6 {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
  }
</style>