---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import MobileMenu from './MobileMenu.jsx';
---

<nav class="fixed top-0 left-0 right-0 z-50 glass-dark">
  <div class="container">
    <div class="flex items-center justify-between py-6">
      <div class="flex items-center">
        <a href="/" class="scale-in">
          <Image 
            src={logo} 
            alt="Frog8 Logo" 
            width={100}
            height={65}
            class="h-10 w-auto"
            loading="eager"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="nav-link">Home</a>
        <a href="/platforms" class="nav-link">Platforms</a>
        <a href="/kiosks" class="nav-link">Kiosks</a>
        <a href="/veriphy" class="nav-link">Veriphy</a>
        <a href="/deployments" class="nav-link">Deployments</a>
        <a href="/about" class="nav-link">About</a>
      </div>

      <!-- Get Started Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn btn-primary">Get Started</a>
      </div>

      <!-- Mobile Menu -->
      <MobileMenu client:load />
    </div>
  </div>
</nav>

<style>
  .nav-link {
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-link:hover {
    color: var(--primary);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary);
    transition: var(--transition);
    border-radius: 2px;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link-mobile {
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    transition: var(--transition);
  }

  .nav-link-mobile:hover {
    color: var(--primary);
    background: rgba(0, 255, 136, 0.05);
  }

  /* Utility classes */
  .w-6 { width: 1.5rem; }
  .h-6 { height: 1.5rem; }
  .py-6 { padding-top: 1.5rem; padding-bottom: 1.5rem; }
  .pb-6 { padding-bottom: 1.5rem; }
  .ml-4 { margin-left: 1rem; }
  .mt-4 { margin-top: 1rem; }
  .w-full { width: 100%; }
</style>