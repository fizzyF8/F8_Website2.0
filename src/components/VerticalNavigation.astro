---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import MobileMenu from './MobileMenu.jsx';
import ScrollNavMenu from './ScrollNavMenu.jsx';

const { pathname } = Astro.url;

const isActive = (href: string) => {
  if (href === '/') {
    return pathname === '/';
  }
  return pathname.startsWith(href);
};

const navLinks = [
  { href: '/', label: 'Home', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
  { href: '/platforms', label: 'Solutions', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
  { href: '/kiosks', label: 'Devices', icon: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z' },
  { href: '/deployments', label: 'Deployments', icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  { href: '/about', label: 'About', icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
];
---

<!-- Sticky Logo at Top Left -->
<div class="sticky-logo">
  <a href="/" class="logo-link" aria-label="Frog8 Home">
    <Image 
      src={logo} 
      alt="Frog8 Logo" 
      width={180}
      height={120}
      class="logo-image"
      loading="eager"
    />
  </a>
</div>

<!-- Sticky Get Started Button at Top Right (Desktop Only) -->
<div class="sticky-cta">
  <a href="/contact" class="btn btn-primary sticky-cta-button">
    Get Started
  </a>
</div>

<!-- Mobile Hamburger Menu at Top Right -->
<div class="mobile-hamburger-wrapper">
  <MobileMenu client:load />
</div>

<!-- Scroll-Aware Navigation Menu -->
<ScrollNavMenu client:load>
  <nav class="vertical-nav">
    <div class="vertical-nav-container">
      <!-- Desktop Navigation Links -->
      <div class="vertical-nav-links">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`vertical-nav-link ${isActive(link.href) ? 'vertical-nav-link--active' : ''}`}
            aria-current={isActive(link.href) ? 'page' : undefined}
          >
            <svg class="nav-link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d={link.icon} />
            </svg>
            <span class="nav-link-text">{link.label}</span>
          </a>
        ))}
      </div>
    </div>
  </nav>
</ScrollNavMenu>

<style>
  /* Sticky Logo at Top Left */
  .sticky-logo {
    position: fixed;
    top: 2rem;
    left: 2rem;
    z-index: 1001;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sticky-logo .logo-link {
    display: inline-block;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sticky-logo .logo-link:hover {
    transform: scale(1.08);
  }

  .sticky-logo .logo-image {
    height: 90px;
    width: auto;
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.6))
            drop-shadow(0 0 40px rgba(255, 255, 255, 0.4))
            drop-shadow(0 0 60px rgba(255, 255, 255, 0.3))
            drop-shadow(0 4px 16px rgba(255, 255, 255, 0.5));
    animation: neonGlow 3s ease-in-out infinite alternate;
  }

  /* Mobile Hamburger Wrapper - hidden on desktop */
  .mobile-hamburger-wrapper {
    display: none;
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 1001;
  }

  @keyframes neonGlow {
    0% {
      filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.6))
              drop-shadow(0 0 40px rgba(255, 255, 255, 0.4))
              drop-shadow(0 0 60px rgba(255, 255, 255, 0.3))
              drop-shadow(0 4px 16px rgba(255, 255, 255, 0.5));
    }
    100% {
      filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.8))
              drop-shadow(0 0 50px rgba(255, 255, 255, 0.6))
              drop-shadow(0 0 70px rgba(255, 255, 255, 0.5))
              drop-shadow(0 4px 20px rgba(255, 255, 255, 0.7));
    }
  }

  /* Sticky Get Started Button at Top Right */
  .sticky-cta {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 1001;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sticky-cta-button {
    padding: 14px 28px;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(167, 210, 33, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sticky-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(167, 210, 33, 0.5);
  }

  .vertical-nav {
    width: 100%;
  }

  /* Scroll Menu Styles */
  :global(.scroll-nav-menu) {
    position: fixed;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%);
    width: 280px;
    z-index: 1000;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.scroll-nav-menu--visible) {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(0);
  }

  :global(.scroll-nav-menu--hidden) {
    opacity: 0;
    visibility: hidden;
    transform: translateY(-50%) translateX(-40px);
    pointer-events: none;
  }

  .vertical-nav-container {
    display: flex;
    flex-direction: column;
    background: transparent;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border: none;
    border-radius: 0;
    box-shadow: none;
    padding: 0;
    gap: 0.75rem;
    transition: none;
  }

  .vertical-nav-container:hover {
    box-shadow: none;
    border-color: transparent;
    transform: none;
  }


  /* Navigation Links */
  .vertical-nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .vertical-nav-link {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1.125rem;
    color: rgba(245, 245, 245, 0.75);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: 14px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    background: rgba(26, 26, 26, 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(167, 210, 33, 0.2);
  }

  .vertical-nav-link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(167, 210, 33, 0.1);
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .vertical-nav-link:hover {
    color: #f5f5f5;
    transform: translateX(4px);
  }

  .vertical-nav-link:hover::before {
    opacity: 1;
  }

  .vertical-nav-link--active {
    color: #0a0a0a;
    background: linear-gradient(135deg, #a7d221 0%, #b8e32e 100%);
    border-color: rgba(167, 210, 33, 0.6);
    box-shadow: 
      0 4px 12px rgba(167, 210, 33, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .vertical-nav-link--active::before {
    opacity: 0;
  }

  .vertical-nav-link--active:hover {
    background: linear-gradient(135deg, #b8e32e 0%, #c4e845 100%);
    border-color: rgba(167, 210, 33, 0.8);
    box-shadow: 
      0 6px 16px rgba(167, 210, 33, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
  }

  .nav-link-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .vertical-nav-link:hover .nav-link-icon {
    transform: scale(1.1);
  }

  .vertical-nav-link--active .nav-link-icon {
    transform: scale(1.15);
  }

  .nav-link-text {
    position: relative;
    z-index: 1;
  }



  /* Responsive Design */
  @media (max-width: 1024px) {
    .sticky-logo {
      top: 1.5rem;
      left: 1.5rem;
    }

    .sticky-logo .logo-image {
      height: 75px;
    }

    .sticky-cta {
      top: 1.5rem;
      right: 1.5rem;
    }

    .sticky-cta-button {
      padding: 12px 24px;
      font-size: 0.9375rem;
    }

    :global(.scroll-nav-menu) {
      left: 1.5rem;
      width: 260px;
    }

    .vertical-nav-container {
      padding: 1.75rem 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .sticky-logo {
      top: 1rem;
      left: 1rem;
    }

    .sticky-logo .logo-image {
      height: 60px;
    }

    .mobile-hamburger-wrapper {
      display: block;
      top: 1rem;
      right: 1rem;
    }

    .sticky-cta {
      display: none; /* Hide Get Started button on mobile - it's in the menu */
    }

    :global(.scroll-nav-menu) {
      display: none !important; /* Completely hide on mobile */
    }


    .vertical-nav {
      width: 100%;
    }

    .vertical-nav-container {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.5rem;
      height: auto;
      gap: 1rem;
      background: transparent;
      backdrop-filter: none;
      border: none;
      box-shadow: none;
    }

    .vertical-nav-container:hover {
      transform: none;
    }

    .vertical-nav-links {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .sticky-logo {
      top: 0.875rem;
      left: 0.875rem;
    }

    .sticky-logo .logo-image {
      height: 50px;
    }

    .mobile-hamburger-wrapper {
      top: 0.875rem;
      right: 0.875rem;
    }

    .vertical-nav-container {
      padding: 0.875rem 1rem;
    }
  }
</style>

